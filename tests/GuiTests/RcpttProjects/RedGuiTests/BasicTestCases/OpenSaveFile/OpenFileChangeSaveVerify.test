Entry-Name: .content

get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
get-editor "TestFile.robot" | get-tab-folder | get-tab-item Variables | click
get-editor "TestFile.robot" | get-link "Section is not yet defined, do you want to create it?" | click

// Add variable

with [get-editor "TestFile.robot" | get-table] {
    get-cell 0 0 | double-click
    get-cell 0 0 | mouse down -count 2
    double-click
    select "${var}" | activate-cell-edit
    with [get-editbox] {
        click-text 3 6
        key-type "NUMPAD_ENTER" "\\u000D"
    }
    apply-cell-edit -deactivate
}

//check if dirty
get-tab-folder -index 1 | get-property activePage | equals "*TestFile.robot" | verify-true

//save
get-eclipse-window | key-type "M1+s"
//check if not dirty
get-tab-folder -index 1 | get-property activePage | equals "TestFile.robot" | verify-true

get-editor "TestFile.robot" | close

get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | get-menu Open | click

// check if added variable exists in list in table editor
get-editor "TestFile.robot" | get-tab-folder | get-tab-item Variables | click
with [get-editor "TestFile.robot" | get-table] {
    get-property itemCount | equals 2 | verify-true
    get-property "getItems().TableItem[0].getText()" | equals "${var}" | verify-true
}

//check if added variable exists in list in Source tab
get-editor "TestFile.robot" | get-tab-folder | get-tab-item Source | click
get-editor "TestFile.robot" | get-text-viewer | get-property "getText()" | equals "*** Variables ***\n"
    + "${var}" | verify-true
