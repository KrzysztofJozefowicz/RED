get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
get-editor "TestFile.robot" | get-tab-folder | get-tab-item Variables | click
get-editor "TestFile.robot" | get-link "Section is not yet defined, do you want to create it?" | click

// Add variable
CreateVariablesInTableEditor "TestFile.robot"

//verify if file dirty
get-tab-folder -index 1 | get-property activePage | equals "*TestFile.robot" | verify-true
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Settings | click
    get-section General | get-table | key-type "M1+s"
}

//verify if file still dirty after save
get-tab-folder -index 1 | get-property activePage | equals "TestFile.robot" | verify-true
with [get-editor "TestFile.robot"] {
    with [get-tab-folder] {
        get-tab-item Source | click
        get-tab-item Settings | click
    }
    close

}
// reopen file with table editor
with [get-view "Project Explorer" | get-tree] {
    select "RobotProject/TestFile.robot" | get-menu "Open With/Robot Table Editor" | click
}

// verify if new variable exists
get-editor "TestFile.robot" | get-tab-folder | get-tab-item Variables | click
format "test" | log -severity error

with [get-editor "TestFile.robot" | get-table] {
    get-property itemCount | equals 3 | verify-true
    get-property "getItems().TableItem[0].getText()" | equals "${var}" | verify-true
}
format "test" | log -severity error

get-editor "TestFile.robot" | get-table | get-property itemCount | equals 3 | verify-true
