// open file
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
// click on variable,settings,testcases tab and create sections
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Variables | click
    get-link "Section is not yet defined, do you want to create it?" | click
    get-tab-folder | get-tab-item Settings | click
    get-link "Section is not yet defined, do you want to create it?" | click
    get-tab-folder | get-tab-item "Test Cases" | click
    with [get-link "Section is not yet defined, do you want to create it?"] {
        click
    }
}
//check if sections are present in outline
with [get-view Outline | get-tree] {
    get-item "TestFile.robot" | get-property childCount | equals 3 | verify-true
    get-item "TestFile.robot" | get-property "getItems().TreeItem[0].getText()" | equals Variables | verify-true
    get-item "TestFile.robot" | get-property "getItems().TreeItem[1].getText()" | equals Settings | verify-true
    get-item "TestFile.robot" | get-property "getItems().TreeItem[2].getText()" | equals "Test Cases" | verify-true
}
//check if sections are present in project explorer
with [get-view "Project Explorer" | get-tree] {
    get-item "RobotProject/TestFile.robot" | get-property childCount | equals 3 | verify-true
    get-item "RobotProject/TestFile.robot" | get-property "getItems().TreeItem[0].getText()" | equals Settings 
        | verify-true
    get-item "RobotProject/TestFile.robot" | get-property "getItems().TreeItem[1].getText()" | equals "Test Cases" 
        | verify-true
    get-item "RobotProject/TestFile.robot" | get-property "getItems().TreeItem[2].getText()" | equals Variables 
        | verify-true
}

// create variable
CreateVariablesInTableEditor "TestFile.robot"
    
//create one metadata entry
Create2MetadataInTableEditor "TestFile.robot"


// check if variable is present in outline
with [get-view Outline | get-tree] {
    get-item "TestFile.robot/Variables" | get-property childCount | equals 2 | verify-true
    get-item "TestFile.robot/Variables" | get-property "getItems().TreeItem[0].getText()" | equals var | verify-true
}

//remove one metadata one variable
get-editor "TestFile.robot" | get-section Metadata | get-table | select data2 | get-menu "Row/Delete row" | click

with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Variables | click
    with [get-table] {
        get-cell 1 0 | mouse down Right -count 1
        get-cell 1 0 | mouse up Right -count 1
        get-menu "Row/Delete row" | click
        //get-editor "TestFile.robot" | get-table | select "${}" | get-menu "Row/Delete row" | click
    }
}

//check if outline is updated for Variables and Metadata
with [get-view Outline | get-tree] {
    get-item "TestFile.robot/Variables" | get-property "getItems().length" | equals 1 | verify-true
    get-item "TestFile.robot/Variables" | get-property "getItems().TreeItem[0].getText()" | equals var | verify-true
    get-item "TestFile.robot/Settings/Metadata" | get-property "getItems().length" | equals 1 | verify-true
    get-item "TestFile.robot/Settings/Metadata" | get-property "getItems().TreeItem[0].getText()" | equals data1 
        | verify-true
}

