// create file
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click

with [get-editor "TestFile.robot" | get-text-viewer] {
    set-caret-pos 1 1
    key-type End
    key-type Enter -times 2
    type-text "*** Variables ***"
    key-type Enter
    type-text "${a}  5"
    key-type "M1+s"
    key-type Enter
    type-text "${b}  6"
    key-type "M1+s"
}
// Open history
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | get-menu "Team/Show Local History" 
    | click
// Open each revision
get-view History | get-tree | select [get-item ".*" -index 0] | double-click
get-view History | get-tree | select [get-item ".*" -index 1] | double-click
get-view History | get-tree | select [get-item ".*" -index 2] | double-click

// Set each revision to Variable tab
get-editor "TestFile.robot [/RobotProject/TestFile.robot]" -index 0| get-tab-folder | get-tab-item Variables | click
get-editor "TestFile.robot [/RobotProject/TestFile.robot]" -index 1| get-tab-folder | get-tab-item Variables | click

//try to add variable in read only
get-editor "TestFile.robot [/RobotProject/TestFile.robot]" -index 0 | get-table | double-click
get-editor "TestFile.robot [/RobotProject/TestFile.robot]" -index 0 | get-table | get-property itemCount | equals 2 
    | verify-true
    

//check if read only message is present
get-editor "TestFile.robot" | get-canvas | get-property "getMessage()" | equals "" | verify-true
get-editor "TestFile.robot [/RobotProject/TestFile.robot]" | get-canvas | get-property "getMessage()" 
    | equals "The file is read-only!" | verify-true
get-editor "TestFile.robot [/RobotProject/TestFile.robot]" -index 1 | get-canvas | get-property "getMessage()" 
    | equals "The file is read-only!" | verify-true

// try to add new variable on rev2 file and check if still there is only one variable
get-editor "TestFile.robot [/RobotProject/TestFile.robot]" | get-table | select "...add new scalar" | double-click
with [get-editor "TestFile.robot [/RobotProject/TestFile.robot]" | get-table] {
    get-cell 1 0 | double-click
    get-cell 1 0 | mouse down -count 2
    double-click
    apply-cell-edit -deactivate
}

get-editor "TestFile.robot [/RobotProject/TestFile.robot]" | get-table | get-property itemCount | equals 2 | verify-true

// add new variable in current file and save. 
with [get-editor "TestFile.robot" | get-table] {
    get-cell 2 0 | double-click
    get-cell 2 0 | mouse down -count 2
    double-click
    select "${var2}" | activate-cell-edit
    with [get-editbox] {
        click-text 3 7
        key-type "NUMPAD_ENTER" "\\u000D"
    }
    apply-cell-edit -deactivate
    key-type "M1+s"
}
get-editor "TestFile.robot" | get-tab-folder | get-tab-item Variables | click
get-editor "TestFile.robot" | get-table | get-property itemCount | equals 4 | verify-true

// check if new revision is added
get-view History | get-tree | get-property itemCount | equals 4 | verify-true
