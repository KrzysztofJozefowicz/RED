------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Settings | click
    get-link "Section is not yet defined, do you want to create it?" | click
    with [get-section General] {
        with [get-editbox -index 1] {
            set-text "This is documentation"
        }
        key-type "M1+s"
        with [get-table] {
            select "Suite Teardown" | key-type Right -times 3
            key-type "NUMPAD_ENTER" "\\u000D"
            click -default
            select "Suite Teardown" | activate-cell-edit -column 4
            with [get-editbox] {
                key-type Left
                key-type "TRAVERSE_ESCAPE"
            }
            cancel-cell-edit
            cancel-cell-edit
            deactivate-cell-edit
            key-type Right
            key-type Left -times 2
            key-type "NUMPAD_ENTER" "\\u000D"
            select "Suite Teardown" | activate-cell-edit -column 1
            click -default
            with [get-editbox] {
                set-text ala
                key-type Enter
            }
            apply-cell-edit -deactivate
            key-type Right
            key-type Enter
            select "Suite Teardown" | activate-cell-edit -column 2
            click -default
            with [get-editbox] {
                set-text ma
                key-type Enter
            }
            apply-cell-edit -deactivate
            key-type Right
            key-type Enter
            click -default
            select "Suite Teardown" | activate-cell-edit -column 4
            with [get-editbox] {
                set-text kota
                key-type Enter
            }
            apply-cell-edit -deactivate
        }
    }
    with [get-section Metadata | get-table] {
        select "...add new metadata" | key-type "NUMPAD_ENTER" "\\u000D"
        click -default
        key-type Enter -times 2
        select data | double-click
        select data | activate-cell-edit
        with [get-editbox] {
            set-text SomeMetadata
            key-type Enter
        }
        apply-cell-edit -deactivate
        key-type Right
        key-type Enter
        select SomeMetadata | activate-cell-edit -column 1
        click -default
        with [get-editbox] {
            set-text WithSomeValue
            key-type Enter
        }
        apply-cell-edit -deactivate
        key-type Right
        key-type Enter
        select SomeMetadata | activate-cell-edit -column 2
        click -default
        with [get-editbox] {
            set-text AndAComment
            key-type Enter
        }
        apply-cell-edit -deactivate
        select "...add new metadata" | key-type Enter
        click -default
        select data | double-click
        select data | activate-cell-edit
        with [get-editbox] {
            set-text NewMetadata
            key-type Enter
        }
        apply-cell-edit -deactivate
        key-type Right
        key-type Enter
        select NewMetadata | activate-cell-edit -column 1
        click -default
        with [get-editbox] {
            set-text OtherValue
            key-type Enter
        }
        apply-cell-edit -deactivate
        key-type Right
        key-type Enter
        select NewMetadata | activate-cell-edit -column 2
        click -default
        with [get-editbox] {
            set-text OtherComment
            key-type Enter
        }
        apply-cell-edit -deactivate
    }
    with [get-section General | get-table] {
        select "Test Template" | key-type Enter
        select "Test Template" | activate-cell-edit -column 1
        click -default
        with [get-editbox] {
            set-text Log
            key-type Enter
        }
        apply-cell-edit -deactivate
        key-type Right
        key-type Enter
        select "Test Template" | activate-cell-edit -column 2
        click -default
        with [get-editbox] {
            set-text 5
            key-type Enter
        }
        apply-cell-edit -deactivate
        key-type Right
        key-type Enter
        select "Test Template" | activate-cell-edit -column 3
        click -default
        with [get-editbox] {
            set-text AndAcomment
            key-type Enter
        }
        apply-cell-edit -deactivate
        key-type "M1+s"
    }
    close
}
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
get-editor "TestFile.robot" | get-text-viewer | get-property text | contains "Documentation    This is documentation" | verify-true
get-editor "TestFile.robot" | get-text-viewer | get-property text | contains "Suite Teardown    ala    kota    # ma" | verify-true
get-editor "TestFile.robot" | get-text-viewer | get-property text | contains "Metadata    SomeMetadata    WithSomeValue    # AndAComment" | verify-true
get-editor "TestFile.robot" | get-text-viewer | get-property text | contains "Metadata    NewMetadata    OtherValue    # OtherComment" | verify-true
get-editor "TestFile.robot" | get-text-viewer | get-property text | contains "Test Template    Log    5    # AndAcomment" | verify-true
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Settings | click
    with [get-section General | get-table] {
        select "Test Template" | double-click
        select "Test Template" | activate-cell-edit -column 1
        with [get-editbox] {
            set-text Change
            key-type Enter
        }
        apply-cell-edit -deactivate
        select "Test Template" | double-click
        select "Test Template" | activate-cell-edit -column 2
        with [get-editbox] {
            set-text This
            key-type Enter
        }
        apply-cell-edit -deactivate
        select "Test Template" | double-click
        select "Test Template" | activate-cell-edit -column 3
        with [get-editbox] {
            set-text AndAComment
            key-type Enter
        }
        apply-cell-edit -deactivate
    }
    with [get-section Metadata | get-table] {
        select NewMetadata | get-menu Delete | click
        key-type "M1+s"
    }
    close
}
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
get-editor "TestFile.robot" | get-text-viewer | get-property text | contains "Documentation    This is documentation" | verify-true
get-editor "TestFile.robot" | get-text-viewer | get-property text | contains "Suite Teardown    ala    kota    # ma" | verify-true
get-editor "TestFile.robot" | get-text-viewer | get-property text | contains "Metadata    SomeMetadata    WithSomeValue    # AndAComment" | verify-true

get-editor "TestFile.robot" | get-text-viewer | get-property text | contains "Test Template    Change    This    # AndAComment" | verify-true



