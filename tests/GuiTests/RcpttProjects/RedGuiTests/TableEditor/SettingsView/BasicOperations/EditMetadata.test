Content-Type: text/ecl
Entry-Name: .content

get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Settings | click
    get-link "Section is not yet defined, do you want to create it?" | click
}



// add Metadata_1 Value_1 Comment_1 to first line
with [get-editor "TestFile.robot"] {
    get-section General | click
    get-section Metadata | click
}
 with [get-editor "TestFile.robot"] {
    with [get-section Metadata | get-table] {
        select "...add new metadata" | key-type Enter
        select data | activate-cell-edit
        with [get-editbox] {
            set-text "Metadata_1"
            key-type Enter
        }
        apply-cell-edit -deactivate
        }
}

with [get-editor "TestFile.robot" | get-section Metadata | get-table] {
    select "Metadata_1" | double-click
    select "Metadata_1" | activate-cell-edit -column 1
    with [get-editbox] {
        set-text "Value_1"
        key-type Enter
    }
    apply-cell-edit -deactivate
}
with [get-editor "TestFile.robot" | get-section Metadata | get-table] {
    select "Metadata_1" | double-click
    select "Metadata_1" | activate-cell-edit -column 2
    with [get-editbox] {
        set-text "Comment_1"
        key-type Enter
    }
    apply-cell-edit -deactivate
}
// save file
get-eclipse-window | key-type "M1+s"
// close file
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Source | click
    close
}
// reopen file
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click

// verify if changes are visible in Source tab
get-editor "TestFile.robot" | get-text-viewer | get-property text | equals "*** Settings ***\n"
    + "Metadata    Metadata_1    Value_1    # Comment_1" | verify-true

// go to Settings -> Metadata part
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Settings | click
    get-section General | click
    get-section Metadata | click
}

// verify if changes are visible in Settings->Metadata tab
with [get-editor "TestFile.robot" | get-section Metadata | get-table] {
    get-item "Metadata_1" | get-property "columns[0]" | equals "Metadata_1" | verify-true
    get-item "Metadata_1" | get-property "columns[1]" | equals "Value_1" | verify-true
    get-item "Metadata_1" | get-property "columns[2]" | equals "# Comment_1" | verify-true
}

// add Metadata_2 & Metadata_3 rows respectivly
 with [get-editor "TestFile.robot"] {
    with [get-section Metadata | get-table] {
        select "...add new metadata" | key-type Enter
        select data | activate-cell-edit
        with [get-editbox] {
            set-text "Metadata_2"
            key-type Enter
        }
        apply-cell-edit -deactivate
        }
}

with [get-editor "TestFile.robot" | get-section Metadata | get-table] {
    select "Metadata_2" | double-click
    select "Metadata_2" | activate-cell-edit -column 1
    with [get-editbox] {
        set-text "Value_2"
        key-type Enter
    }
    apply-cell-edit -deactivate
}
with [get-editor "TestFile.robot" | get-section Metadata | get-table] {
    select "Metadata_2" | double-click
    select "Metadata_2" | activate-cell-edit -column 2
    with [get-editbox] {
        set-text "Comment_2"
        key-type Enter
    }
    apply-cell-edit -deactivate
}

 with [get-editor "TestFile.robot"] {
    with [get-section Metadata | get-table] {
        select "...add new metadata" | key-type Enter
        select data | activate-cell-edit
        with [get-editbox] {
            set-text "Metadata_3"
            key-type Enter
        }
        apply-cell-edit -deactivate
        }
}

with [get-editor "TestFile.robot" | get-section Metadata | get-table] {
    select "Metadata_3" | double-click
    select "Metadata_3" | activate-cell-edit -column 1
    with [get-editbox] {
        set-text "Value_3"
        key-type Enter
    }
    apply-cell-edit -deactivate
}
with [get-editor "TestFile.robot" | get-section Metadata | get-table] {
    select "Metadata_3" | double-click
    select "Metadata_3" | activate-cell-edit -column 2
    with [get-editbox] {
        set-text "Comment_3"
        key-type Enter
    }
    apply-cell-edit -deactivate
}
// Save file
get-eclipse-window | key-type "M1+s"

// verify if the 3 entries are visivle in Text Editor
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | select "RobotProject/TestFile.robot" 
    | get-menu "Open With/Robot Text Editor" | click
get-editor "Robot Text Editor" | get-text-viewer | get-property text | equals "*** Settings ***\n"
    + "Metadata    Metadata_1    Value_1    # Comment_1\n"
    + "Metadata    Metadata_2    Value_2    # Comment_2\n"
    + "Metadata    Metadata_3    Value_3    # Comment_3" | verify-true
// remove cells in middle entry by pressing delete - deleate each cell individualy & do not remove row
get-editor "Robot Text Editor" | close
with [get-editor "TestFile.robot" | get-section Metadata | get-table] {
    select "Metadata_2" | key-type Del
    key-type Right
    key-type Del
    key-type Right
    key-type Del
    key-type "M1+s"
}

// verify if deleted cells are empty but vissible (row not removed)
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | get-menu "Open With/Robot Text Editor" 
    | click
get-editor "Robot Text Editor" | get-text-viewer | get-property text | equals "*** Settings ***\n"
    + "Metadata    Metadata_1    Value_1    # Comment_1\n"
    + "Metadata        \n"
    + "Metadata    Metadata_3    Value_3    # Comment_3" | verify-true

// remove empty row by CTRL+DEL 
get-editor "Robot Text Editor" | close
with [get-editor "TestFile.robot" | get-section Metadata | get-table] {
    select "" | key-type "M1+DEL"
    key-type "M1+s"
}

// check if empty row was removed in Text Editor
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | get-menu "Open With/Robot Text Editor" 
    | click
get-editor "Robot Text Editor" | get-text-viewer | get-property text | equals "*** Settings ***\n"
    + "Metadata    Metadata_1    Value_1    # Comment_1\n"
    + "Metadata    Metadata_3    Value_3    # Comment_3" | verify-true
