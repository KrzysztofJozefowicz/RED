get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Settings | click
    get-link "Section is not yet defined, do you want to create it?" | click

}

with [get-editor "TestFile.robot" | get-section General | get-table] {
    select "Suite Setup" | key-type Right
    key-type Enter
    select "Suite Setup" | activate-cell-edit -column 1
    click -default
    with [get-editbox] {
        set-text ala
        key-type Enter
    }
    apply-cell-edit -deactivate
    key-type Right
    key-type Enter
    select "Suite Setup" | activate-cell-edit -column 2
    click -default
    with [get-editbox] {
        set-text ma
        key-type Enter
    }
    apply-cell-edit -deactivate
    key-type Right
    key-type Enter
    select "Suite Setup" | activate-cell-edit -column 3
    click -default
    with [get-editbox] {
        set-text kota
        key-type Enter
    }
    apply-cell-edit -deactivate
    
    key-type Right
    key-type Enter
    select "Suite Setup" | activate-cell-edit -column 4
    click -default
    with [get-editbox] {
        set-text a
        key-type Enter
    }
    apply-cell-edit -deactivate
    
    key-type Right
    key-type Enter
    select "Suite Setup" | activate-cell-edit -column 5
    click -default
    with [get-editbox] {
        set-text pies
        key-type Enter
    }
    apply-cell-edit -deactivate
    
    key-type Right
    key-type Enter
    select "Suite Setup" | activate-cell-edit -column 6
    click -default
    with [get-editbox] {
        set-text chomika
        key-type Enter
    }
    apply-cell-edit -deactivate
    
    key-type "M1+s"
}
get-editor "TestFile.robot" | close
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
get-editor "TestFile.robot" | get-tab-folder | get-tab-item Source | click
get-editor "TestFile.robot" | get-text-viewer | get-property text | equals "*** Settings ***\n"
    + "Suite Setup    ala    ma    kota    a    pies    # chomika" | verify-true
    
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Settings | click
    with [get-section General | get-table] {
        select "Suite Setup" | double-click
        select "Suite Setup" | activate-cell-edit -column 1
        with [get-editbox] {
            set-text slon
            key-type Enter
        }
        apply-cell-edit -deactivate
        key-type Right -times 2
        key-type Enter
        select "Suite Setup" | activate-cell-edit -column 3
        click -default
        with [get-editbox] {
            set-text ole
            key-type Enter
        }
        apply-cell-edit -deactivate
        key-type "M1+s"
    }
    close
}
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
get-editor "TestFile.robot" | get-tab-folder | get-tab-item Source | click
get-editor "TestFile.robot" | get-text-viewer | get-property text | equals "*** Settings ***\n"
