        mouse-release 36 36 button3 2097152
        get-menu Cut | click
        
        //cut value=2 by menu
        mouse-move 333 48
        mouse-press 333 48 button3
        mouse-release 333 48 button3 2097152
        get-menu Cut | click
        
        //cut comment=comment3 by menu
        mouse-move 629 72
        mouse-press 629 72 button3
        mouse-release 629 72 button3 2097152
        get-menu Cut | click
        
        //change a4 to new (because RCPTT cannot validate hexstrings ??)
        mouse-press 52 98 button1
        mouse-release 52 98 button1 524288
        key-type F2
        
        with [get-editbox] {
	        type-text new
	        key-type Enter
	    }
	    
        mouse-press 52 98 button1
        mouse-release 52 98 button1 524288
        key-type "M1+x"
        mouse-move 994 11
	    
	    
	    //paste new to"5"
        mouse-move 338 119
        mouse-press 338 119 button1
        mouse-release 338 119 button1 524288
