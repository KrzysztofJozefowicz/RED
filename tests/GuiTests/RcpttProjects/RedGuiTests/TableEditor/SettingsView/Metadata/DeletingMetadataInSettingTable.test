//open editor
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click

//add Metada
get-editor "TestFile.robot" | get-text-viewer | set-text "*** Settings ***\n"
    + "Metadata    a1    1    #comment1\n"
    + "Metadata    a2    2    #comment2\n"
    + "Metadata    a3    3    #comment3\n"
    + "Metadata    a4    4    #comment4\n"
    + "Metadata    a5    5    #comment5\n"
    + "Metadata    a6    6    #comment6\n"
    + "Metadata    a7    7    #comment7\n"
    + "Metadata    a8    8    #comment8\n"
    + "Metadata    a9    9    #comment9\n\n"
    + "*** Test Cases ***\n"
    + "test\n"
    + "    log  7"

//open Settings tab
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Settings | click
    get-section General | click
    get-section Metadata | click
}

with [get-editor "TestFile.robot" | get-section Metadata | get-canvas] {
    //select entire row and press del
    mouse-press 61 39 button1
    mouse-release 61 39 button1 524288
    mouse-move 3 37
    mouse-press 3 37 button1
    mouse-release 3 37 button1 524288
    key-type Del
    
    //remove Metadata=a2
    mouse-move 215 51
    mouse-press 215 51 button1
    mouse-release 215 51 button1 524288
    mouse-move 214 52
    key-type Del
    
    //remove value=3
    mouse-move 309 66
    mouse-press 309 66 button1
    mouse-release 309 66 button1 524288
    key-type Del
    
    //remove comment=comment3
    mouse-move 566 97
    mouse-press 566 97 button1
    mouse-release 566 97 button1 524288
    key-type Del
    
    //remove metadata=a5 by menu
    mouse-move 22 120
    mouse-press 22 120 button1
    mouse-release 22 120 button1 524288
    mouse-press 22 120 button3
    mouse-release 22 120 button3 2097152
    get-menu Delete | click
    
    //remove row a6 by menu
    mouse-move 74 143
    mouse-press 74 143 button1
    mouse-release 74 143 button1 524288
    mouse-press 74 143 button3
    mouse-release 74 143 button3 2097152
    get-menu "Row/Delete row" | click
    
    //remove a7 row by keys
    mouse-move 40 165
    mouse-press 40 165 button1
    mouse-release 40 165 button1 524288
    key-type "M1+DEL"
    mouse-move 952 60
}


with [get-editor "TestFile.robot" | get-section Metadata | get-canvas] {
    //remove removed item
    mouse-press 296 78 button1
    mouse-release 296 78 button1 524288
    key-type Del -times 2
    
    //try to remove button "..add"
    mouse-move 128 187
    mouse-press 128 187 button1
    mouse-release 128 187 button1 524288
    key-type Del
    mouse-move 1035 332
    key-type "M1+s"
}

proc "check-values-in-row" [val row] [val metadata] [val val] [val comment]{
	get-editor "TestFile.robot" | get-section Metadata | get-canvas | get-object | invoke getCellByPosition 1 $row|  invoke getDataValue| eq $metadata |verify-true
	get-editor "TestFile.robot" | get-section Metadata | get-canvas | get-object | invoke getCellByPosition 2 $row|  invoke getDataValue| eq $val |verify-true
	get-editor "TestFile.robot" | get-section Metadata | get-canvas | get-object | invoke getCellByPosition 3 $row|  invoke getDataValue| eq $comment |verify-true

}

check-values-in-row -row 1 -metadata "\\" -val "" -comment ""
check-values-in-row -row 2 -metadata "\\" -val "2" -comment "#comment2"
check-values-in-row -row 3 -metadata "a3" -val "" -comment "#comment3"
check-values-in-row -row 4 -metadata "a4" -val "4" -comment ""
check-values-in-row -row 5 -metadata "\\" -val "5" -comment "#comment5"
check-values-in-row -row 6 -metadata "a7" -val "7" -comment "#comment7"
check-values-in-row -row 7 -metadata "a9" -val "9" -comment "#comment9"


//check Source
get-editor "TestFile.robot" | get-tab-folder | get-tab-item Source | click
get-editor "TestFile.robot" | get-text-viewer | get-property text | equals "*** Settings ***\n"
    + "Metadata    \\    \n"
    + "Metadata    \\    2    #comment2\n"
    + "Metadata    a3    #comment3\n"
    + "Metadata    a4    4    \n"
    + "Metadata    \\    5    #comment5\n"
    + "Metadata    a7    7    #comment7\n"
    + "Metadata    a9    9    #comment9\n\n"
    + "*** Test Cases ***\n"
    + "test\n"
    + "    log  7" | verify-true

