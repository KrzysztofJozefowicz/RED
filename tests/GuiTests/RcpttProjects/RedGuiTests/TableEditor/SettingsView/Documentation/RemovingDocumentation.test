        set-caret-pos 15 16
        key-type "M1+z"
        key-type "M1+s"
    }
    //remove all items from second section
    get-tab-folder | get-tab-item Settings | click
    with [get-section General | get-editbox -index 1] {
    	click
    	set-focus
        set-text-selection -offset 4 -startLine 5 -endLine 3 -endOffset 0
        key-type BackSpace
    }
