------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click


with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Settings | click
    get-link "Section is not yet defined, do you want to create it?" | click
    with [get-section General | get-editbox -index 1] {
    	//add 2 lines
        click
        set-focus
        type-text line1
        key-type Enter
        type-text line2
        //copy "line2"
        set-text-selection -offset 5 -startLine 1 -endLine 1 -endOffset 0
        key-type "M1+c"
        set-text-offset 5 1
        //paste after "line2" twice
        key-type "M1+v" -times 2
        key-type Enter
        //add line3
        type-text line3
        //copy entire text
        set-text-selection -offset 5 -startLine 2 -endLine 0 -endOffset 0
        key-type "M1+c"
        set-text-offset 5 2
        key-type Enter
        //paste text
        key-type "M1+v"
    }
}
//check text in box
get-editor "TestFile.robot" | get-section General | get-editbox -index 1 | get-property text | equals "line1\n"
    + "line2line2line2\n"
    + "line3\n"
    + "line1\n"
    + "line2line2line2\n"
    + "line3" | verify-true
    
//select all and cut    
with [get-editor "TestFile.robot" | get-section General | get-editbox -index 1] {
    set-text-selection -offset 5 -startLine 5 -endLine 0 -endOffset 0
    key-type "M1+x"
}

//chek if box is empty
get-editor "TestFile.robot" | get-section General | get-editbox -index 1 | get-property text | equals "" | verify-true

//paste it to box
with [get-editor "TestFile.robot" | get-section General | get-editbox -index 1] {
	click
	set-focus
    set-text-offset 0 0
    key-type "M1+v"
}
get-editor "TestFile.robot" | get-section General | get-editbox -index 1 | get-property text | equals "line1\n"
    + "line2line2line2\n"
    + "line3\n"
    + "line1\n"
    + "line2line2line2\n"
    + "line3" | verify-true

 
    
// add resource file    
get-view "Project Explorer" | get-tree | select RobotProject | get-menu "New/Robot Resource file" | click
with [get-window "New Robot Resource file"] {
    get-editbox -after [get-label "File name:"] | set-text res
    get-button Finish | click
}
//paste cut text to new file
with [get-editor "res.robot"] {
    get-tab-folder | get-tab-item Settings | click
    get-link "Section is not yet defined, do you want to create it?" | click
    with [get-section General | get-editbox -index 1] {
        click
        set-focus
        set-text-offset 0 0
        key-type "M1+v"
        wait 1000
    }
}
get-editor "res.robot" | get-section General | get-editbox -index 1 | get-property text | equals "line1\n"
    + "line2line2line2\n"
    + "line3\n"
    + "line1\n"
    + "line2line2line2\n"
    + "line3" | verify-true

//remove all and add one line, copy it
with [get-editor "res.robot" | get-section General | get-editbox -index 1] {
	click
	set-focus
	set-text-offset 0 0
    set-text-selection -offset 5 -startLine 5 -endLine 0 -endOffset 0
    key-type BackSpace
    type-text "second file"
    
    //copy line: second line
    set-text-selection -offset 11 -startLine 0 -endLine 0 -endOffset 0
    key-type "M1+c"
}
//paste to test suite copied text

with [get-editor "TestFile.robot"] {
    with [get-section General | get-editbox -index 1] {
    	click
    	set-focus
    	set-text-offset 0  0
        set-text-offset 5 5        
        key-type "NUMPAD_ENTER" "\\u000D"
        key-type "M1+v"
    }
    wait 5000
}

//new line is added at the end
get-editor "TestFile.robot" | get-section General | get-editbox -index 1 | get-property text | equals "line1\n"
    + "line2line2line2\n"
    + "line3\n"
    + "line1\n"
    + "line2line2line2\n"
    + "line3\n"
    + "second file" | verify-true
wait 1000
//check Source    
with [get-editor "TestFile.robot"] {
    wait 3000
    get-tab-folder | get-tab-item Source | click
	wait 500
}
get-editor "TestFile.robot" | get-text-viewer | get-property text | equals "*** Setting ***\n"
    + "Documentation    line1    \n"
    + "...    line2line2line2    \n"
    + "...    line3    \n"
    + "...    line1    \n"
    + "...    line2line2line2    \n"
    + "...    line3    \n"
    + "...    second file\n"
    + "*** Test Cases ***" | verify-true
    
//go to Source in resource file    
with [get-editor "res.robot"] {
    click
    get-tab-folder | get-tab-item Source | click
}

//check text
get-editor "res.robot" | get-text-viewer | get-property text | equals "*** Setting ***\n"
    + "Documentation    second file" | verify-true

//copy "Documentation " word    
with [get-editor "res.robot"] {
    with [get-text-viewer] {
        set-caret-pos 2 14
        select-range 2 15 2 1
        key-type "M1+c"
    }
    //pase it to doc box
    get-tab-folder | get-tab-item Settings | click
    with [get-section General | get-editbox -index 1] {
    	click
    	set-focus
        set-text-offset 0 0
        key-type "M1+v"
    }
}
get-editor "res.robot" | get-section General | get-editbox -index 1 | get-property text 
    | equals "Documentation second file" | verify-true
    
    
