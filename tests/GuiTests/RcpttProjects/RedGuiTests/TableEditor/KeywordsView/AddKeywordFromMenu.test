Entry-Name: .content

//open editor
with [get-view "Project Explorer" | get-tree] {
    select RobotProject | double-click
    select "RobotProject/TestFile.robot"  | double-click
}


// add Keywords section in Source 
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Source | click
    with [get-text-viewer] {
        set-caret-pos 1 19
        key-type Enter
		type-text "*** Keywords ***"
        key-type Enter
    }
    get-tab-folder | get-tab-item Keywords | click
}

//add 4 keyword: KW 2, KW 1, KW, KW3, KW
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Keywords | click
    with [get-tree] {
    	get-item "...add new keyword" | double-click
	    select Keyword | activate-cell-edit
    	get-editbox | key-type Enter
    	apply-cell-edit -deactivate
    	select Keyword | get-menu "Add new keyword" | click
    	select "Keyword 1"  | get-menu "Add new keyword" | click
    	select Keyword  | get-menu "Add new keyword" | click
    }
}

//check if on "..." button menu Add keyword is disable
get-editor "TestFile.robot" | get-tree | select "Keyword/..."
with [get-editor "TestFile.robot" | get-tree] {
    get-menu "Add new keyword" | get-property caption | equals "Add new keyword" | verify-true
    get-menu "Add new keyword" | get-property selection | equals false | verify-true
    get-menu "Add new keyword" | get-property enablement | equals false | verify-true
    get-menu "Add new keyword" | get-property index | equals 0 | verify-true
    get-menu "Add new keyword" | get-property cascade | equals false | verify-true
}

//add content to "Keyword"
with [get-editor "TestFile.robot" | get-tree] {
    get-item "Keyword/..." | double-click
    select "Keyword/" | activate-cell-edit
    with [get-editbox] {
        set-text Log
        key-type Enter
    }
    apply-cell-edit -deactivate
    key-type Right
    type-text 4
    select "Keyword/Log" | activate-cell-edit -column 1
    get-editbox | key-type Enter
    apply-cell-edit -deactivate
    
    //add keyword by clickin on "Log"
    select "Keyword/Log" | get-menu "Add new keyword" | click
    get-item "Keyword 2/..." | double-click
    select "Keyword 2/" | activate-cell-edit
    with [get-editbox] {
        set-text "Set Tags"
        key-type Enter -times 2
        key-type Right
        key-type Enter
    }
    apply-cell-edit -deactivate
    
    //add content to Keyword 2
    key-type Right
    type-text t
    select "Keyword 2/Set Tags" | activate-cell-edit -column 1
    with [get-editbox] {
        set-text tag
        key-type Enter
    }
    apply-cell-edit -deactivate
    
    //add keyword by selecting line "Set Tags"
    select "Keyword 2/Set Tags" | get-menu "Add new keyword" | click
}


