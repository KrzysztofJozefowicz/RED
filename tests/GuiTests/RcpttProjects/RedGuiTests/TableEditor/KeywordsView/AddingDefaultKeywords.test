Entry-Name: .content

//open editor
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click

//check how view looks like
get-editor "TestFile.robot" | get-tab-folder | get-tab-item Keywords | click
with [get-editor "TestFile.robot"] {
    with [get-canvas] {
        get-property "getMessage()" | equals "Section is not yet defined, do you want to create it?" | verify-true
        get-property "getText()" | equals "User Keywords" | verify-true
    }
    get-tree | get-property itemCount | equals 0 | verify-true
}

//add new default keyword
with [get-editor "TestFile.robot"] {
    get-link "Section is not yet defined, do you want to create it?" | click
}   
with [get-editor "TestFile.robot" | get-tree] {
    get-item "...add new keyword" | double-click
    select Keyword | activate-cell-edit
    get-editbox | key-type "NUMPAD_ENTER" "\\u000D"
    apply-cell-edit -deactivate
}
//check what was added
get-editor "TestFile.robot" | get-tree | get-item Keyword | get-property childCount | equals 1 | verify-true

with [get-editor "TestFile.robot" | get-tree] {
    get-item Keyword | get-property "columns[0]" | equals Keyword | verify-true
    get-item Keyword | get-property "columns[1]" | equals "" | verify-true
    get-item Keyword | get-property "columns[2]" | equals "" | verify-true
    get-item Keyword | get-property "columns[3]" | equals "" | verify-true
    get-item Keyword | get-property "columns[4]" | equals "" | verify-true
    get-item Keyword | get-property "columns[5]" | equals "" | verify-true
    get-item Keyword | get-property "columns[6]" | equals "" | verify-true
    get-item Keyword | get-property "values['Comment']" | equals "" | verify-true
}

with [get-editor "TestFile.robot" | get-tree] {
    get-item "Keyword/..." | get-property caption | equals "..." | verify-true
    get-item "Keyword/..." | get-property index | equals 0 | verify-true
    get-item "Keyword/..." | get-property "values['Comment']" | equals "" | verify-true
    get-item "...add new keyword" | get-property caption | equals "...add new keyword" | verify-true
    get-item "...add new keyword" | get-property selected | equals false | verify-true
    get-item "...add new keyword" | get-property "values['Comment']" | equals "" | verify-true
}

//add keywords and change the numertion 
with [get-editor "TestFile.robot" | get-tree] {
    get-item "...add new keyword"  | double-click
    select "Keyword 1" | activate-cell-edit
    apply-cell-edit -deactivate
    get-item "...add new keyword" | double-click
    select "Keyword 2" | activate-cell-edit
    with [get-editbox] {
        set-text "New keyword"
        key-type Enter
    }
    apply-cell-edit -deactivate
    get-item "...add new keyword" | double-click
    select "Keyword 2" | activate-cell-edit
    get-editbox | key-type "NUMPAD_ENTER" "\\u000D"
    apply-cell-edit -deactivate
    get-item "...add new keyword" | double-click
    select "Keyword 3" | activate-cell-edit
    with [get-editbox] {
        set-text "Keyword 56"
        key-type "NUMPAD_ENTER" "\\u000D"
    }
    apply-cell-edit -deactivate
    get-item "...add new keyword"  | double-click
    select "Keyword 57" | activate-cell-edit
    get-editbox | key-type "NUMPAD_ENTER" "\\u000D"
    apply-cell-edit -deactivate
    key-type "M1+s"
}
wait 500
//check if all keywords are expanded
with [get-editor "TestFile.robot" | get-tree] {
    get-item Keyword | get-property "getExpanded()" | equals true | verify-true
    get-item "Keyword 1" | get-property "getExpanded()" | equals false | verify-true
    get-item "New keyword" | get-property "getExpanded()" | equals false | verify-true
    get-item "Keyword 2" | get-property "getExpanded()" | equals false | verify-true
    get-item "Keyword 56" | get-property "getExpanded()" | equals false | verify-true
    get-item "Keyword 57" | get-property "getExpanded()" | equals false | verify-true
}



