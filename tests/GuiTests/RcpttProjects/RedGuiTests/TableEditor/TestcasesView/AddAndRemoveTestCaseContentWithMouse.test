// initialise editor
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item "Test Cases" | click
    //get-link "Section is not yet defined, do you want to create it?" | click
}

add-default-testcases

// delete content of case 1 , cell should be empty
get-editor "TestFile.robot" | get-tree | select "case 1/Log 1" | get-menu Delete | click

// cell should be empty
get-editor "TestFile.robot" | get-tree | get-item "case 1/" | get-property childCount | equals 0 | verify-true

// add once again item to case1 
with [get-editor "TestFile.robot" | get-tree] {
    select "case 1/" | double-click
    select "case 1/" | activate-cell-edit
    with [get-editbox] {
        set-text "Log 1"
        key-type Enter
    }
    apply-cell-edit -deactivate
    key-type Down
    select "case 1/..." | key-type Enter
    select "case 1/" | activate-cell-edit
    with [get-editbox] {
        set-text "Log 2"
        key-type Enter
    }
    apply-cell-edit -deactivate
    key-type Down
    select "case 1/..." | key-type Enter
    select "case 1/" | activate-cell-edit
    with [get-editbox] {
        key-type Up
        set-text "Log 3"
        key-type Enter
    }
    apply-cell-edit -deactivate
    key-type Up
}
// delete cell & save it and check if cell is removed by save action
with [get-editor "TestFile.robot" | get-tree] {
    select "case 1/Log 2" | get-menu Delete | click
    key-type "M1+s"
}
//check is cell is removed
get-editor "TestFile.robot" | get-tree | get-item "case 1" | get-property childCount | equals 3 | verify-true

// add once again item to case1 
with [get-editor "TestFile.robot" | get-tree] {
    select "case 1/..." | double-click
    get-item "case 1" | get-item "\.\.\." | double-click
    with [get-editbox] {
        set-text "Log 2"
        key-type Enter
    }
    apply-cell-edit -deactivate
}


// Delete row bu using Row->Delete row right-click menu option , row should be removed
with [get-editor "TestFile.robot" | get-tree] {
    select "case 1/Log 2" | get-menu "Row/Delete row" | click
}

//verify if row is removed

get-editor "TestFile.robot" | get-tree | get-item "case 1" | get-property childCount | equals 3 | verify-true


