// open testcase, open TC table editor
get-view "Project Explorer" | get-tree | select "REDProject/new_test.robot" | double-click
with [get-editor "new_test.robot"] {
    get-tab-folder | get-tab-item "Test Cases" | click
    // add new test case by mouse option  between two testcases
    get-tree | select "test 2" | get-menu "Add new test case" | click
}
// verify if added


with [get-editor "new_test.robot" | get-tree] {
    get-property "getItems().TreeItem[0].getText()" | equals "test 1" | verify-true
    get-property "getItems().TreeItem[1].getText()" | equals case | verify-true
    get-property "getItems().TreeItem[2].getText()" | equals "test 2" | verify-true
}

// remove middle TC
get-editor "new_test.robot" | get-tree | select case | get-menu "Row/Delete row" | click

// verify if removed
get-editor "new_test.robot" | get-tree | get-property itemCount | equals 3 | verify-true

