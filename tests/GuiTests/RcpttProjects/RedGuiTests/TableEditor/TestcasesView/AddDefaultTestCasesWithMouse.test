// initialise editor
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
get-editor "TestFile.robot" | get-tab-folder | get-tab-item "Test Cases" | click


// create first test case with double click
with [get-editor "TestFile.robot" | get-tree] {
    get-item "...add new test case" | double-click
    apply-cell-edit -deactivate
}
// check if columns in default case are empty
with [get-editor "TestFile.robot" | get-tree] {
    get-item case | get-property "columns[0]" | equals case | verify-true
    get-item case | get-property "columns[1]" | equals "" | verify-true
    get-item case | get-property "columns[2]" | equals "" | verify-true
    get-item case | get-property "columns[3]" | equals "" | verify-true
    get-item case | get-property "columns[4]" | equals "" | verify-true
    get-item case | get-property "columns[5]" | equals "" | verify-true
    get-item case | get-property "columns[6]" | equals "" | verify-true
}
// check if there is only one item created in default case ( ... )
with [get-editor "TestFile.robot" | get-tree] {
    get-item case | get-property childCount | equals 1 | verify-true
}
// add TC content
with [get-editor "TestFile.robot" | get-tree] {
    select "case/..." | double-click
    get-item "case" | get-item "\.\.\." | double-click
    with [get-editbox] {
        set-text Log
        key-type Enter
    }
    apply-cell-edit -deactivate
}


// add another one to check if new default name is still unique
with [get-editor "TestFile.robot" | get-tree] {
    get-item "...add new test case" | double-click
    apply-cell-edit -deactivate
}

// check TC name and content
with [get-editor "TestFile.robot" | get-tree] {
    get-item "case 1" | get-property caption | equals "case 1" | verify-true
    get-item "case 1" | get-property index | equals 1 | verify-true
}
// add TC content
with [get-editor "TestFile.robot" | get-tree] {
    select "case 1/..." | double-click
    get-item "case 1" | get-item "\.\.\." | double-click
    with [get-editbox] {
        set-text Log1
        key-type Enter
    }
    apply-cell-edit -deactivate
}


// add new test case and change the name

with [get-editor "TestFile.robot" | get-tree] {
    get-item "...add new test case" | double-click
    select "case 2" | activate-cell-edit
    with [get-editbox] {
        set-text "case new1"
        key-type Enter
    }
    apply-cell-edit -deactivate
}
// add TC content
with [get-editor "TestFile.robot" | get-tree] {
    select "case new1/..." | double-click
    get-item "case new1" | get-item "\.\.\." | double-click
    with [get-editbox] {
        set-text Log2
        key-type Enter
    }
    apply-cell-edit -deactivate
}


// check if name was changed after edit
get-editor "TestFile.robot" | get-tree | get-item "case new1" | get-property caption | equals "case new1" | verify-true


