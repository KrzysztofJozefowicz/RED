// initialise editor
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item "Test Cases" | click
    //get-link "Section is not yet defined, do you want to create it?" | click
}

add-testcases-with-keyboard
// remove TestCase name with Delete
get-editor "TestFile.robot" | get-tree | select "case 1" | key-type Del
// check if removed 
get-editor "TestFile.robot" | get-tree | get-item "" | get-property caption | equals "" | verify-true
// do the save, whole TC should be removed
get-editor "TestFile.robot" | get-tree | select "" | key-type "M1+s"
// check if case 1 is removed 
get-editor "TestFile.robot" | get-tree | get-property itemCount | equals 3 | verify-true

// remove case 2 with ctrl+del
get-editor "TestFile.robot" | get-tree | select "case 2" | key-type "M1+DEL"
// whole tc should be removed
get-editor "TestFile.robot" | get-tree | get-property itemCount | equals 2 | verify-true

