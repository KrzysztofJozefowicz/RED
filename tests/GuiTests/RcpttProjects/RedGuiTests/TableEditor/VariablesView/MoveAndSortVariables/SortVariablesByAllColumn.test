get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
with [get-editor "TestFile.robot"] {
    with [get-text-viewer] {
        set-caret-pos 1 19
        key-type Enter
        type-text "*** Variables ***"
        key-type "M1+s"
    }
    get-tab-folder | get-tab-item Variables | click
}

add-variable -list_of_variables [list "${}" "${var100}" "${var1}" "${var11}" "${11}" "${Text}" "${text}" "${TEXT}" "${varaible with space }" "${a}" "${G}" "${A}" "${aA}" "${99}" "${_temp}" "${+8}" "${ }" "${global}" "${global_name}" "${text}" ] -script_name "TestFile.robot"

add-value-to-variable -list_of_values [list "notpad" "1"  " space "  "Z main"  "1"  "6"  "2"  [concat "0" "2"]  "101"  "!@#"  "${text}"  "                     space2"  "B"  "f"  "GHJUK"  "ghjuk"  "258+9652"  "" "" "3" ] -script_name "TestFile.robot"

add-comment-to-variable -list_of_comments [list  "red comment"  "1"  "6"  "12"  " space here "  "${var99}"  "_undecrscore"  "()"  "<commnet>"  "DEFINED"  "ZZ top"  "zorro 1" "defined"  "defined here"  "_UNDERSCORE"  "glob"  "text"  "Glob"  "500"  "abba" ] -script_name "TestFile.robot"
