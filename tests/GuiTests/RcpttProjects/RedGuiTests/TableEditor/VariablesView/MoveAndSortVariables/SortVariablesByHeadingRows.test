------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
with [get-editor "TestFile.robot"] {
    with [get-text-viewer] {
        set-caret-pos 1 19
        key-type Enter
        type-text "*** Variables ***"
        key-type "M1+s"
    }
    get-tab-folder | get-tab-item Variables | click
}
// add variables with mouse
CreateVariablesInTableEditor "TestFile.robot"

// instert new variable between created
with [get-editor "TestFile.robot" | get-table] {
    get-cell 1 0 | mouse down Right -count 1
    get-cell 1 0 | mouse up Right -count 1
    get-menu "Add new scalar" | click
}

//check if variable created
get-editor "TestFile.robot" | get-table | get-property "getItems().TableItem[1].getText()" | equals "${var2}" 
    | verify-true

// save file, sorting should not change a file
get-eclipse-window | key-type "M1+s"


// sort variable names ascending
get-editor "TestFile.robot" | get-table | get-column-header Variable | click

// check if sorted
get-editor "TestFile.robot" | get-table | get-property "getSortDirection()" | equals 128 | verify-true
with [get-editor "TestFile.robot" | get-table] {
    get-property "getItems().TableItem[0].getText()" | equals "${var}" | verify-true
    get-property "getItems().TableItem[1].getText()" | equals "${var1}" | verify-true
    get-property "getItems().TableItem[2].getText()" | equals "${var2}" | verify-true
}

// sort variable names descending
get-editor "TestFile.robot" | get-table | get-column-header Variable | click

// check if sorted
get-editor "TestFile.robot" | get-table | get-property "getSortDirection()" | equals 1024 | verify-true
with [get-editor "TestFile.robot" | get-table] {
    get-property "getItems().TableItem[0].getText()" | equals "${var2}" | verify-true
    get-property "getItems().TableItem[1].getText()" | equals "${var1}" | verify-true
    get-property "getItems().TableItem[2].getText()" | equals "${var}" | verify-true
}


// click Variable header to go back to orginal set
get-editor "TestFile.robot" | get-table | get-column-header Variable | click

// check if sorted
get-editor "TestFile.robot" | get-table | get-property "getSortDirection()" | equals 0 | verify-true
with [get-editor "TestFile.robot" | get-table] {
    get-property "getItems().TableItem[0].getText()" | equals "${var}" | verify-true
    get-property "getItems().TableItem[1].getText()" | equals "${var2}" | verify-true
    get-property "getItems().TableItem[2].getText()" | equals "${var1}" | verify-true
}
// check if file is still clean, sorting should not change a data
get-tab-folder -index 1 | get-property activePage | equals "TestFile.robot" | verify-true


// add values to variables
with [get-editor "TestFile.robot" | get-table] {
    get-cell 0 1 | click
    get-cell 0 1 | mouse down -count 2
    double-click
    select "${var}" | activate-cell-edit -column 1
    with [get-editbox] {
        set-text 0
        key-type "NUMPAD_ENTER" "\\u000D"
    }
    apply-cell-edit -deactivate
    get-cell 1 1 | click
    get-cell 1 1 | mouse down -count 2
    double-click
    select "${var2}" | activate-cell-edit -column 1
    with [get-editbox] {
        set-text 2
        key-type "NUMPAD_ENTER" "\\u000D"
    }
    apply-cell-edit -deactivate
    get-cell 2 1 | click
    get-cell 2 1 | mouse down -count 2
    double-click
    select "${var1}" | activate-cell-edit -column 1
    with [get-editbox] {
        set-text 1
        key-type "NUMPAD_ENTER" "\\u000D"
    }
    apply-cell-edit -deactivate

}
// save file, sorting should not change a file
get-eclipse-window | key-type "M1+s"


//sort variable by values column - asscending
get-editor "TestFile.robot" | get-table | get-column-header Value | click

//check if sorted

with [get-editor "TestFile.robot" | get-table] {
    get-property "getItems().TableItem[0].getData().getValue()" | equals 0 | verify-true
    get-property "getItems().TableItem[1].getData().getValue()" | equals 1 | verify-true
    get-property "getItems().TableItem[2].getData().getValue()" | equals 2 | verify-true
}
//check diraction label
get-editor "TestFile.robot" | get-table | get-property "getSortDirection()" | equals 128 | verify-true

//sort variable by values column - ascending
get-editor "TestFile.robot" | get-table | get-column-header Value | click

//check if sorted
with [get-editor "TestFile.robot" | get-table] {
    get-property "getItems().TableItem[0].getData().getValue()" | equals 2 | verify-true
    get-property "getItems().TableItem[1].getData().getValue()" | equals 1 | verify-true
    get-property "getItems().TableItem[2].getData().getValue()" | equals 0 | verify-true
}
//check diraction label
get-editor "TestFile.robot" | get-table | get-property "getSortDirection()" | equals 1024 | verify-true

//sort variable by values column - original order
get-editor "TestFile.robot" | get-table | get-column-header Value | click

//check if sorted
with [get-editor "TestFile.robot" | get-table] {
    get-property "getItems().TableItem[0].getData().getValue()" | equals 0 | verify-true
    get-property "getItems().TableItem[1].getData().getValue()" | equals 2 | verify-true
    get-property "getItems().TableItem[2].getData().getValue()" | equals 1 | verify-true
}

// check if file is still clean, sorting should not change a data
get-tab-folder -index 1 | get-property activePage | equals "TestFile.robot" | verify-true

//check diraction label
get-editor "TestFile.robot" | get-table | get-property "getSortDirection()" | equals 0 | verify-true



