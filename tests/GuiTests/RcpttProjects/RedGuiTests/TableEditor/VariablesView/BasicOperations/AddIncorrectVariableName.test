with [get-view "Project Explorer" | get-tree] {
    select RobotProject | double-click
    select "RobotProject/TestFile.robot" | double-click
}

with [get-editor "TestFile.robot"] {
	    get-tab-folder | get-tab-item Variables | click
	    get-link "Section is not yet defined, do you want to create it?" | click
}	    
	    
//add empty variable
add-variable -list_of_variables [list ""] -script_name  "TestFile.robot"
with [get-editor "TestFile.robot" | get-table] {
    get-item "${}" | get-property "values['Variable']" | equals "${}" | verify-true
    get-item "${}" | get-property "values['Value']" | equals "" | verify-true
    get-item "${}" | get-property "values['Comment']" | equals "" | verify-true
}

