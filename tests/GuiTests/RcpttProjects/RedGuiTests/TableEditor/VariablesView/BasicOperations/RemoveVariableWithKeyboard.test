get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click

with [get-editor "TestFile.robot"] {
    with [get-text-viewer] {
        set-caret-pos 1 19
        key-type Enter
        type-text "*** Variables ***"
        key-type "M1+s"
    }
    get-tab-folder | get-tab-item Variables | click
}

get-editor "TestFile.robot" | get-tab-folder | get-tab-item Variables | click
// create 2 variables with keyboard - activate add new variables with Enter
with [get-editor "TestFile.robot" | get-table] {
    get-cell 0 0 | click
    key-type Enter
    select "${var}" | activate-cell-edit
    get-editbox | key-type Enter
    apply-cell-edit -deactivate
    key-type Down
    select "...add new scalar" | key-type Enter
    select "${var1}" | activate-cell-edit
    get-editbox | key-type Enter
    apply-cell-edit -deactivate
}

// remove var2
with [get-editor "TestFile.robot" | get-table] {
    get-cell 1 0 | click
    key-type "M1+DEL"
}

// check if var1 has been deleted
with [get-editor "TestFile.robot" | get-table] {
    get-property "getItems().length" | equals 2 | verify-true
    get-property "getItems().TableItem[0].getText()" | equals "${var}" | verify-true
    get-property "getItems().TableItem[1].getText()" | equals "...add new scalar" | verify-true
}
