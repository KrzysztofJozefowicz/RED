// open file and open Variable table editor
get-view "Project Explorer" | get-tree | select "REDProject/new_test.robot" | double-click
with [get-editor "new_test.robot"] {
	// insert variables between two
    get-tab-folder | get-tab-item Variables | click
    with [get-table] {
        select "${long_name_global_value}" | get-menu "Add new scalar" | click
        select "${long_name_global_value}" | get-menu "Add new list" | click
        select "${long_name_global_value}" | get-menu "Add new dictionary" | click
    }
}
// check if variables are created
with [get-editor "new_test.robot" | get-table] {
    get-property "getItems().TableItem[1].getText()" | equals "${var}" | verify-true
    get-property "getItems().TableItem[2].getText()" | equals "@{var1}" | verify-true
    get-property "getItems().TableItem[3].getText()" | equals "&{var2}" | verify-true
}
