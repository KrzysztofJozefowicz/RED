with [get-view "Project Explorer" | get-tree] {
    select RobotProject | double-click
    select "RobotProject/TestFile.robot" | double-click
}

with [get-editor "TestFile.robot"] {
	    get-tab-folder | get-tab-item Variables | click
	    get-link "Section is not yet defined, do you want to create it?" | click
}	

//add all kinds of variables
add-variable -list_of_variables [list "${scalar}" "@{tab}" "&{dict}" "${scalar2}" "@{tab2}" "&{dict2}"] -script_name  "TestFile.robot"
add-value-to-variable -list_of_values [list "1" "one  two  three  four with space" "key=value  1=2"] -script_name  "TestFile.robot"


//check select fist sclalar
with [get-editor "TestFile.robot"] {
    get-table | select "${scalar}"
    get-section "Edit Variable" | click
}
//check how looks view
with [get-editor "TestFile.robot" | get-section "Edit Variable" | get-control Any -index 4] {
    get-property "getChildren().length" | equals 4 | verify-true
    get-property "getChildren().Control[0].getText()" | equals "Name:" | verify-true
    get-property "getChildren().Control[0].isEnabled()" | equals true | verify-true
    get-property "getChildren().Control[1].getText()" | equals scalar | verify-true
    get-property "getChildren().Control[1].isEnabled()" | equals false | verify-true
    get-property "getChildren().Control[2].getText()" | equals "Scalar:" | verify-true
    get-property "getChildren().Control[2].isEnabled()" | equals true | verify-true
    get-property "getChildren().Control[3].getText()" | equals 1 | verify-true
    get-property "getChildren().Control[3].getEditable()" | equals true | verify-true
    get-property "getChildren().Control[3].isEnabled()" | equals true | verify-true
}

