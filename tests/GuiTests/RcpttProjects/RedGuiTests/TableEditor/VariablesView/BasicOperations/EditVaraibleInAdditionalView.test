//select empty sclalar and add value in additional view
with [get-editor "TestFile.robot"] {
    get-table | select "${scalar2}"
    with [get-section "Edit Variable" | get-editbox -after [get-label "Scalar:"]] {
        set-text "scalar2 value"
    }
}
with [get-editor "TestFile.robot" | get-table] {
    get-item "${scalar2}" | get-property index | equals 3 | verify-true
    get-item "${scalar2}" | get-property "values['Variable']" | equals "${scalar2}" | verify-true
    get-item "${scalar2}" | get-property "values['Value']" | equals "scalar2 value" | verify-true
    get-item "${scalar2}" | get-property "values['Comment']" | equals "" | verify-true
}

//select dictionary and add 3-4 value in normal view
with [get-editor "TestFile.robot" | get-table] {
    select "&{dict}" | double-click
    select "&{dict}" | activate-cell-edit -column 1
    with [get-editbox] {
        set-text "key=value  1=2  3=4"
        key-type Enter
    }
    apply-cell-edit -deactivate
}
//check if this new pair was added to 'Edit Variable' view
with [get-editor "TestFile.robot" | get-section "Edit Variable" | get-table] {
    get-item 1 | get-property index | equals 0 | verify-true
    get-item 1 | get-property "values['Key']" | equals key | verify-true
    get-item 1 | get-property "values['No.']" | equals 1 | verify-true
    get-item 1 | get-property "values['Value']" | equals value | verify-true
    get-item 2 | get-property index | equals 1 | verify-true
    get-item 2 | get-property "values['Key']" | equals 1 | verify-true
    get-item 2 | get-property "values['No.']" | equals 2 | verify-true
    get-item 2 | get-property "values['Value']" | equals 2 | verify-true
    get-item 3 | get-property index | equals 2 | verify-true
    get-item 3 | get-property "values['Key']" | equals 3 | verify-true
    get-item 3 | get-property "values['No.']" | equals 3 | verify-true
    get-item 3 | get-property "values['Value']" | equals 4 | verify-true
}

//add new values to tab2 using 'Edit Variable' view
get-editor "TestFile.robot" | get-table | select "@{tab2}"
add-value-to_list-in-EditVariable -list_of_values [list  "56" "text" "\"Alice Cooper\"" "${tab_var}" "@{new_list}" "&{new_dict}" " space was here "] -script_name "TestFile.robot"

get-editor "TestFile.robot" | get-section "Edit Variable" | get-table | get-property itemCount | equals 8 | verify-true

//check if values were added to main view
with [get-editor "TestFile.robot" | get-table] {
    get-item "@{tab2}" | get-property "values['Variable']" | equals "@{tab2}" | verify-true
    get-item "@{tab2}" | get-property "values['Value']" 
        | equals "56  text  \"Alice Cooper\"  ${tab_var}  @{new_list}  &{new_dict}   space was here " | verify-true
    get-item "@{tab2}" | get-property "values['Comment']" | equals "" | verify-true
}


