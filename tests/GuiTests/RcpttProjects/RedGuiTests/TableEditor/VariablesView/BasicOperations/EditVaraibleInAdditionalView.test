Content-Type: text/ecl
Entry-Name: .content

with [get-view "Project Explorer" | get-tree] {
    select RobotProject | double-click
    select "RobotProject/TestFile.robot" | double-click
}

with [get-editor "TestFile.robot"] {
	    get-tab-folder | get-tab-item Variables | click
	    get-link "Section is not yet defined, do you want to create it?" | click
}	

add-variable -list_of_variables [list "${scalar}" "@{tab}" "&{dict}" "${scalar2}" "@{tab2}" "&{dict2}"] -script_name  "TestFile.robot"
add-value-to-variable -list_of_variables [list "1" " one two three" "key value 1=2"] -script_name  "TestFile.robot"

get-editor "TestFile.robot" | get-table | select "@{tab}"

get-editor "TestFile.robot" | get-section "Edit Variable" | click
with [get-editor "TestFile.robot" | get-section "Edit Variable" | get-control Any -index 4] {
    get-property "getChildren().Control[0].getClassName()" | equals "org.eclipse.swt.widgets.Label" | verify-true
    get-property "getChildren().Control[0].getText()" | equals "Name:" | verify-true
    get-property "getChildren().Control[0].isEnabled()" | equals true | verify-true
    get-property "getChildren().Control[1].getText()" | equals tab | verify-true
    get-property "getChildren().Control[1].isEnabled()" | equals false | verify-true
    get-property "getChildren().Control[2].getText()" | equals "List:" | verify-true
    get-property "getChildren().Control[2].isEnabled()" | equals true | verify-true
    get-property "getChildren().Control[3].getColumns().TableColumn[0].getText()" | equals Index | verify-true
    get-property "getChildren().Control[3].getColumns().TableColumn[1].getText()" | equals Value | verify-true
    get-property "getChildren().Control[3].getItems().length" | equals 2 | verify-true
    get-property "getChildren().Control[3].getItems().TableItem[0].getData().getValue()" | equals "one two three" 
        | verify-true
    get-property "getChildren().Control[3].getItems().TableItem[0].getData().getIndex()" | equals 0 | verify-true
    get-property "getChildren().Control[3].getItems().TableItem[1].getData().getStyledText().getString()" 
        | equals "...add new element" | verify-true
}
get-editor "TestFile.robot" | get-table | select "${scalar}"
with [get-editor "TestFile.robot" | get-section "Edit Variable" | get-control Any -index 4] {
    get-property "getChildren().Control[0].getText()" | equals "Name:" | verify-true
    get-property "getChildren().Control[0].isEnabled()" | equals true | verify-true
    get-property "getChildren().Control[1].getText()" | equals scalar | verify-true
    get-property "getChildren().Control[1].isEnabled()" | equals false | verify-true
    get-property "getChildren().Control[2].getText()" | equals "Scalar:" | verify-true
    get-property "getChildren().Control[2].isEnabled()" | equals true | verify-true
    get-property "getChildren().Control[3].getText()" | equals 1 | verify-true
    get-property "getChildren().Control[3].getEditable()" | equals true | verify-true
    get-property "getChildren().Control[3].isEnabled()" | equals true | verify-true
}
get-editor "TestFile.robot" | get-table | select "&{dict2}"
