get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Variables | click
    get-link "Section is not yet defined, do you want to create it?" | click
}

// create 2 variables with keyboard - activate add new variables with Enter
with [get-editor "TestFile.robot" | get-table] {
    get-cell 0 0 | click
    key-type Enter
    select "${var}" | activate-cell-edit
    get-editbox | key-type Enter
    apply-cell-edit -deactivate
    key-type Down
    select "...add new variables" | key-type Enter
    select "${var1}" | activate-cell-edit
    get-editbox | key-type Enter
    apply-cell-edit -deactivate
}
// insert variable with key shortkut ctrn +n 
with [get-editor "TestFile.robot" | get-table] {
    get-cell 1 0 | click
    key-type "M1+n"
}

// check if inserted
get-editor "TestFile.robot" | get-table | get-property "getItems().TableItem[1].getText()" | equals "${var2}" 
    | verify-true
