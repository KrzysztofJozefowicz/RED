//open editor and switch to Variables tab. Delete all variables
with [get-view "Project Explorer" | get-tree] {
    select RobotProject | double-click
    select "RobotProject/TestFile.robot" | double-click
}
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Variables | click
    get-button "Delete Variables section" | click
    get-section "Edit Variable" | click
}
//check if Edit Variable view is empty
get-editor "TestFile.robot" | get-section "Edit Variable" | get-control Any -index 4 
    | get-property "getChildren().length" | equals 0 | verify-true
    
//check label if exists    
get-editor "TestFile.robot" | get-link "Section is not yet defined, do you want to create it?" | get-property caption 
    | equals "Section is not yet defined, do you want to create it?" | verify-true

//save file and close
with [get-editor "TestFile.robot"] {
    get-table | key-type "M1+s"
    close
}
//open editor and check i Varaible tab is empty
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click


//check if label exist
get-editor "TestFile.robot" | get-tab-folder | get-tab-item Variables | click
get-editor "TestFile.robot" | get-link "Section is not yet defined, do you want to create it?" | get-property caption 
    | equals "Section is not yet defined, do you want to create it?" | verify-true
    
    
//go to source and check if it is empty
get-editor "TestFile.robot" | get-tab-folder | get-tab-item Source | click
get-editor "TestFile.robot" | get-text-viewer | get-property text | equals "" | verify-true
