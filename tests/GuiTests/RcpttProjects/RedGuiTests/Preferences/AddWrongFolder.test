Entry-Name: .content

get-menu "File/New/Robot Project" | click
with [get-window "New Robot project"] {
    get-editbox -after [get-label "Project name:"] | set-text "to_remove"
    get-button Finish | click
}


get-preferences-menu | click
with [get-window Preferences] {
    get-tree | select "Robot Framework/Installed frameworks" | double-click
}
set-dialog-result Folder "C:\\Program Files (x86)"
get-window Preferences | get-button "Add..." | click
with [get-window Preferences | get-table] {
    get-item "<unknown>" | get-property caption | equals "<unknown>" | verify-true
    get-item "<unknown>" | get-property selection | equals false | verify-true
    get-item "<unknown>" | get-property enablement | equals false | verify-true
    get-item "<unknown>" | get-property selected | equals false | verify-true
    get-item "<unknown>" | get-property "columns[0]" | equals "<unknown>" | verify-true
    get-item "<unknown>" | get-property "columns[1]" | equals "C:\\Program Files (x86)" | verify-true
}

with [get-window Preferences] {
    with [get-table] {
        get-item "Robot Framework 2.8.7 \\(Python 2.7.8 on win32\\)" | uncheck
        get-item "<unknown>" | check
    }
    get-button OK | click
    get-window "Rebuild required" | get-button OK | click
}

get-preferences-menu | click
get-window Preferences | get-button Cancel | click
with [get-view "Project Explorer" | get-tree] {
    get-item "to_remove" | get-property "image.decorations[0].path" 
        | equals "org.robotframework.ide.eclipse.main.plugin/resources/robot_dec.png" | verify-true
    get-item "to_remove" | get-property "image.decorations[1].path" 
        | equals "org.eclipse.jdt.ui/icons/full/ovr16/error_co.gif" | verify-true
}
get-view "Project Explorer" | get-tree 
    | select "to_remove/Robot Standard libraries \\[Robot Framework 2.8.7 \\(Python 2.7.8 on win32\\)\\]"
get-preferences-menu | click
get-window Preferences | get-button OK | click
get-view "Project Explorer" | get-tree 
    | select "to_remove/Robot Standard libraries \\[Robot Framework 2.8.7 \\(Python 2.7.8 on win32\\)\\]"
get-preferences-menu | click
with [get-window Preferences] {
    with [get-table] {
        select "<unknown>"
        get-item "<unknown>" | uncheck
        get-item "Robot Framework 2.8.7 \\(Python 2.7.8 on win32\\)" | check
    }
    get-button OK | click
    get-window "Rebuild required" | get-button OK | click
}
get-view "Project Explorer" | get-tree 
    | select "to_remove/Robot Standard libraries \\[Robot Framework 2.8.7 \\(Python 2.7.8 on win32\\)\\]"
