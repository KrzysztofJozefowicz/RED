    get-section General | click
    with [get-section Imports] {
        click
        with [get-canvas] {
            mouse-press 327 38 button1
            mouse-release 327 38 button1 524288
            key-type Enter
        }
        //add arg1 to fisrt arg column
        with [get-editbox] {
            type-text arg1
            key-type Enter
        }
        //add arg3 to 3. arg column
        with [get-canvas] {
            key-type Right -times 2
            type-text a
        }
        with [get-editbox] {
            set-text arg3
        }
    }
}
