//run test when wrong interpreter was selected
exec-with-options {
    get-view "Project Explorer" | get-tree | get-menu "Run As/1 Robot Test" | click
    //check error 
    get-window "Problem Occurred" | get-label "Launching 'TestFile.robot (2)' has encountered a problem." 
        | get-property caption | equals "Launching 'TestFile.robot (2)' has encountered a problem." | verify-true
        
    //check text below    
    get-window "Problem Occurred" 
        | get-label "The runtime environment .*" 
        | get-property caption 
        | equals [format"The runtime environment %s%sNoInterpreter is either not a python installation or it has no Robot installed" $RED_workspace_path $sys_sep] 
        | verify-true
        
