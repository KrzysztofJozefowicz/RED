with [get-editor "TestFile.robot" | get-text-viewer] {
    set-caret-pos 2 1
    type-text "kw_1"
    key-type Enter
    type-text log
    key-type Tab
    type-text test1
    key-type Enter
    key-type BackSpace -times 4
    type-text "k2_1"
    key-type Enter
    
