    key-type "M1+SPACE"
    key-type Down -times 3
    key-type Enter
    
	//add varaibles
    key-type "M1+SPACE"
 
	with [get-window -from "CompletionProposalPopup.createProposalSelector()" | get-table] {
	    get-property itemCount | equals 7| verify-true
