get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | select "RobotProject/TestFile.robot" 
    | double-click
with [get-editor "TestFile.robot" | get-text-viewer] {
	//remove all
    key-type "M1+a"
    key-type Del
    
    //add Settings
    key-type "M1+SPACE"
    key-type Down
    
    //add 3 lines and back to second
    key-type Enter -times 3
    key-type Up -times 2
    
    //add Librery to Settings
    key-type "M1+SPACE"
    key-type Enter
    type-text Collections
    key-type Enter -times 2
    
    // add Test Cases
    key-type "M1+SPACE"
    key-type "NUMPAD_MULTIPLY" "*"
    key-type Down -times 2
    key-type Enter
    type-text "test 1"
    key-type Enter
    key-type Tab
 
    type-text Lo
    key-type "M1+SPACE"
    key-type Down -times 2
    key-type Enter
    
    type-text "this is logging many"
    key-type Enter
    
    //add keyword from collection
    key-type "M1+SPACE"
    key-type Enter
    type-text "@{list}"
    key-type Enter -times 2
    key-type Left -times 4
    
    //add variables sections
    key-type "M1+SPACE"
    key-type Enter
    type-text "@{list}  1  2  3"
    key-type Enter -times 2
    
    //add keyword section
    key-type "M1+SPACE"
    key-type "NUMPAD_MULTIPLY" "*"
    key-type Down -times 3
    key-type Enter
   
    type-text "My Keyword"
    key-type Enter
    key-type Tab
    
    //Add Shoul be equal
    type-text SH
    key-type "M1+SPACE"
    key-type Down
    key-type Enter
    type-text "1  2"
    
    // go back to Test Cases and add keword previously created
    key-type Up -times 6
    key-type "M1+SPACE"
    type-text m
    key-type Enter
    key-type Enter
    key-type "M1+s"
}


get-editor "TestFile.robot" | get-text-viewer | get-property text | equals "*** Settings ***\n"
    + "Library  Collections\n\n"
    + "*** Test Cases ***\n"
    + "test 1\n"
    + "    Log Many  this is logging many\n"
    + "    Append To List  @{list}\n"
    + "    My Keyword  \n"
    + "    \n"
    + "*** Variables ***\n"
    + "@{list}  1  2  3\n\n"
    + "*** Keywords ***\n"
    + "My Keyword\n"
    + "    Should Be Equal  1  2" | verify-true
    
    
