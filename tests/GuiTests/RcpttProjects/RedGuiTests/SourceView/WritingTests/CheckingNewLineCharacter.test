get-view "Project Explorer" | get-tree  | select "RobotProject/TestFile.robot" | double-click

//add simple test    
with [get-editor "TestFile.robot" | get-text-viewer] {
    key-type End
    key-type Enter
    type-text "test 1"
    key-type Enter
    key-type Tab
    type-text  "Log  1"
    key-type "M1+s"
}

get-editor "TestFile.robot" | get-text-viewer | get-property text | equals "*** Test Cases ***\n"
    + "test 1\n"
    + "    Log  1" | verify-true
    

//check line number (more means CRLF)
if [get-by-os -linux "Linux" -win "Windows"| equals "Windows"]{
	get-editor "TestFile.robot" | get-text-viewer | get-property "getCharCount()" | equals 38 | verify-true

}-else{
	get-editor "TestFile.robot" | get-text-viewer | get-property "getCharCount()" | equals 36 | verify-true
}

//remove all and add new test cases
with [get-editor "TestFile.robot" | get-text-viewer] {
    key-type "M1+a"
    key-type BackSpace
    key-type "M1+SPACE"
    key-type Down -times 2
    key-type Enter
    type-text "test 2"
    key-type Enter
    key-type Tab
    type-text "log  5"
    key-type "M1+s"
}

get-editor "TestFile.robot" | get-text-viewer | get-property text | equals "*** Test Cases ***\n"
    + "test 2\n"
    + "    log  5" | verify-true
    
    
//check line number (more means CRLF)
