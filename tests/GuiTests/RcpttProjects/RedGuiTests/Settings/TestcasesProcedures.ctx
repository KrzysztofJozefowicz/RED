proc "add-default-testcases"
 {	
		// create first test case with double click
		with [get-editor "TestFile.robot" | get-tree] {
		get-item "...add new test case" | double-click
		    apply-cell-edit -deactivate
		}
		
		// add TC content
		with [get-editor "TestFile.robot" | get-tree] {
		select "case/..." | double-click
		get-item "case" | get-item "\.\.\." | double-click
		    with [get-editbox] {
		        set-text Log
		        key-type Enter
		    }
		    apply-cell-edit -deactivate
		}
		
		// create 2nd test case with double click
		with [get-editor "TestFile.robot" | get-tree] {
		get-item "...add new test case" | double-click
		    apply-cell-edit -deactivate
		}
		
		with [get-editor "TestFile.robot" | get-tree] {
		select "case 1/..." | double-click
		get-item "case 1" | get-item "\.\.\." | double-click
		with [get-editbox] {
		    set-text "Log 1"
		        key-type Enter
		    }
		    apply-cell-edit -deactivate
		}
		// create 3rd test case with double click
		with [get-editor "TestFile.robot" | get-tree] {
		get-item "...add new test case" | double-click
		    apply-cell-edit -deactivate
		}
		
		with [get-editor "TestFile.robot" | get-tree] {
		select "case 2/..." | double-click
		get-item "case 2" | get-item "\.\.\." | double-click
		with [get-editbox] {
		    set-text "Log 2"
		        key-type Enter
		    }
		    apply-cell-edit -deactivate
		}
 }
 proc "add-testcases-with-keyboard"
 {
		 
		// add fist item by mouse
		with [get-editor "TestFile.robot" | get-tree] {
		     get-item "...add new test case" | double-click
		    key-type Enter
		
		}
		//select focus on first element, press down arrow and create new one
		with [get-editor "TestFile.robot" | get-tree] {
		    select "...add new test case" | key-type Enter
		    select "case 1" | activate-cell-edit
		    get-editbox | key-type Enter
		    apply-cell-edit -deactivate
		    key-type Right
		    key-type Down
		    select "case 1/..." | key-type Enter
		    select "case 1/" | activate-cell-edit
		    with [get-editbox] {
		        set-text "Log 1"
		        key-type Enter
		    }
		    apply-cell-edit -deactivate
		}
		//create another entry
		with [get-editor "TestFile.robot" | get-tree] {
		    key-type Down
		    select "case 1/..." | key-type Down
		    select "...add new test case" | key-type Enter
		    select "case 2" | activate-cell-edit
		    get-editbox | key-type Enter
		    apply-cell-edit -deactivate
		    key-type Right
		    key-type Down
		    select "case 2/..." | key-type Enter
		    select "case 2/" | activate-cell-edit
		    with [get-editbox] {
		        set-text "Log 2"
		        key-type Enter
		    }
		    apply-cell-edit -deactivate
}
 
 }
