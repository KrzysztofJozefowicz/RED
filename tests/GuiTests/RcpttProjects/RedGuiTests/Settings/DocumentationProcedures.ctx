global [val html_beginning "<html><head><meta charset=\"utf-8\"><style>body \{    color: rgb\(0,0,0\);    background-color: rgb\(255,255,225\);"
	     + "    font-size: small;    font-family: sans-serif;}code \{    background-color: rgba\(220, 220, 220, 0.5\);    font-size: 1.1em;\}a, "
	     + "a:link, a:visited \{    color: #c30;\}a:hover, a:active \{    text-decoration: underline;    color: black;\}a:hover \{   text-decoration: underline !important;\}"
	     + "pre \{    margin-left: 0.7em;    background-color: rgba\(220, 220, 220, 0.5\);\}table, th, td \{    border: 1px solid #a6a6a6;    border-collapse: collapse;    "
	     + "border-spacing: 2px;    padding: 4px;    font-size: 0.9em;\}</style></head>"]
	     
	     
proc "check-documentation-view" [val inner_html]{
	get-window -from "Information Window" | get-control Browser | get-property text 
	    | matches [concat $html_beginning  $inner_html ] | verify-true
}


proc "check-error-in-editor" [val text]{
	check-documentation-view [format "<body \s?style=\"overflow: hidden;\">%s"
	    + "</body></html>"  $text]
}

proc "check-content-assist-documentation" [val value] {
	get-window -from "CompletionProposalPopup.createProposalSelector()" | get-window -from "Information Window" 
	    | get-control Browser | get-property text 
	    | equals [format  "<body \s?style=\"overflow: hidden;\"><p><b>Source:</b> Built-in</p>\\n"
	    + "<p><b>Value:</b> %s</p></body></html>"  $html_beginning $value ]| verify-true
}    
