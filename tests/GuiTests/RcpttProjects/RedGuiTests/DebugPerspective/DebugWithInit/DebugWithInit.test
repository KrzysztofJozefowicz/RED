// there was NPE while trying to debug test with _init_.py file
// just try to debug sample test and check if debug runs


get-view "Project Explorer" | get-tree | select "TestKeywordFind/test/RobotTest.robot" | double-click

exec-with-options -disableJobWaiting -command {
	with [get-editor "RobotTest.robot"] {
	    get-text-viewer | set-caret-pos 5 2
	    with [get-left-ruler] {
	        get-ruler-column LineNumberColumn | click-ruler -line 5 -button Right
	        get-menu "Toggle Breakpoint" | click
	    }
	}
	get-button "Debug.*" | click
	wait 6000
	get-editor "RobotTest.robot" | get-text-viewer | key-type F5	
}

