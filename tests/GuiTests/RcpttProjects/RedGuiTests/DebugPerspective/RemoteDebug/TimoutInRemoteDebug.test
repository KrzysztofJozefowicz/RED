Entry-Name: .content

//set text
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
with [get-editor "TestFile.robot" | get-text-viewer] {
    key-type End
    set-caret-pos 1 19
    key-type Enter
    type-text test
    key-type Enter
    type-text "log  56"
    key-type "M1+s"
}
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | get-menu "Debug As/1 Robot Test" | click
get-button "Debug.*" | click -arrow
get-menu "Debug Configurations..." | click

with [get-window "Debug Configurations"] {
    get-tree | select "Robot/TestFile.robot"
    get-tab-folder | get-tab-item Remote | click
}

//set timout to 3000 ms
with [get-window "Debug Configurations"] {
    with [get-group "Remote Debugging"] {
        get-editbox -after [get-label "Connection timeout [ms]:"] | set-text 3000
        get-editbox -after [get-label "Local IP:"] | set-text localhost
        get-editbox -after [get-label "Local port:"] | set-text 65002
    }
    get-button Apply | click
}

measure-time "RemoteDebugTimeout3000ms" {
	with [get-window "Debug Configurations"] {
	    get-button Debug | click    
	}   
}| constrain-max duration 5000   

//check console
try -times 5 -delay 1000 -command {
	get-view Console | get-text-viewer | get-property text 
	    | equals "Command: .*\n"
	    + "Suite Executor: .*\n"
	    + "Debug server is listening on localhost:65002, you can run a remote test\n"
	    + "A timeout was reached while waiting for a remote connection" | verify-true
}

//set minimal timeout = 1
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" 
    | get-menu "Debug As/Debug Configurations..." | click
with [get-window "Debug Configurations"] {
    get-tab-folder | get-tab-item Remote | click
    get-group "Remote Debugging" | get-editbox -after [get-label "Connection timeout [ms]:"] | set-text 1
    get-button Apply | click
    get-button Close | click
}

measure-time "RemoteDebugTimeout1ms" {
	get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | get-menu "Debug As/1 Robot Test" | click
}| constrain-max duration 2100   

