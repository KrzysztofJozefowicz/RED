Content-Type: text/ecl
Entry-Name: .content

//set test
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
get-editor "TestFile.robot" | get-text-viewer | set-text "*** Test cases ***\n"
    + "test 1\n"
    + "    Log  5" 

get-button "Save (M1+S)" | click    
//run in debug to create run configuration
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | get-menu "Debug As/1 Robot Test" | click

exec-with-options -disableJobWaiting -command {
//got to Debug configuration
	get-button "Debug TestFile.robot" | click -arrow
	get-menu "Debug Configurations..." | click
	with [get-window "Debug Configurations"] {
	    get-tree | select "Robot/TestFile.robot"
	    get-tab-folder | get-tab-item Remote | click
	    with [get-group "Remote Debugging"] {
	        get-editbox -after [get-label "Host:"] | set-text localhost
	        get-editbox -after [get-label "Port:"] | set-text 64001
	    }
	    get-button Apply | click
	    get-button Debug | click
	}
}
//stop test and check print on console
get-view Console | get-button Terminate | click
get-view Console | get-text-viewer | get-property text 
    | equals "Debug server is listening on localhost:64001, you can run a remote test.\n"
    + "Debug server terminated by user." | verify-true
