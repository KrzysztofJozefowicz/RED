get-view "Project Explorer" | get-tree | select "RemoteProject/TestFile.robot" | double-click
get-editor "TestFile.robot" | get-left-ruler | get-ruler-column AnnotationColumn | double-click-ruler 9


//decrease timeout
get-preferences-menu | click
with [get-window Preferences] {
    get-tree | select "Robot Framework/Default Launch Configurations"
    get-group "Listener tab" | get-editbox -after [get-label "Server connection timeout [s]:"] | set-text 5
    get-button Apply | click
    get-button OK | click
}


get-menu "Run/Run Configurations..." | click
get-window "Run Configurations" | get-tree | select "Robot Remote" | double-click

set-dialog-result Folder $RED_workspace_path
with [get-window "Run Configurations"] {
    get-group "Remote Client" | get-button "Export Client Script" | click
}
//remove it
with [get-window "Run Configurations"] {
    get-tree | select "Robot Remote/New_configuration" | key-type Del
    get-window "Confirm Launch Configuration Deletion" | get-button Yes | click
}
get-window "Run Configurations" | get-button Close | click  
    
exec-with-options -disableJobWaiting -command {
	get-view "Project Explorer" | get-tree | select "RemoteProject/TestFile.robot" | select "RemoteProject/TestFile.robot" 
	    | get-menu "Debug As/2 Robot Remote Test" | click
	
	wait-for-remote-connection 
	
	
	if [get-by-os -linux "Linux" -win "Windows"| equals "Windows"]{
		exec-process  "cmd.exe"  "/c" "start" "\"\""  "\"python.exe\"" "-m" "robot.run" "--listener" [concat "\"" $RED_workspace_path "\\TestRunnerAgent.py:43981\""]  "-s" "RemoteProject.TestFile" [concat "\"" $RED_workspace_path "\\RemoteProject\""] -timeout 3		
	}-else{
	
	}  
	
	check-debug-marker-on-ruler -line 9	-script_name "TestFile.robot" 
	get-button "Terminate (M1+F2)" | click
}

//check message view
get-view "Message Log" | get-editbox | get-property text | equals "Starting test: RemoteProject.TestFile.test 1\n"
    + ".*: INFO : 5\n"
    + "Ending test: RemoteProject.TestFile.test 1\n\n"
    + "Starting test: RemoteProject.TestFile.test 2" | verify-true
    
//check console    
get-view Console | get-text-viewer | get-property text 
    | equals "Remote execution server is listening on 127.0.0.1:43981, you can execute tests on remote client\n"
    + "Remote connection has been established \(client id #.*\)\n"
    + "client python version: .*\n"
    + "client robot version: .*\n"
    + "tests finished on client machine\n"
    + "Remote connection closed \(client id #.*\)" | verify-true
    
		
