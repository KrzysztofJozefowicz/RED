    double-click-ruler 13
    double-click-ruler 15
}
get-view "Project Explorer" | get-tree | select "MediumRobotTest/Script.robot" | get-menu "Debug As/1 Robot Test" 
    | click
    
try -times 10 -delay 300 -command{
	get-view Debug | get-tree |get-item "Script.robot \\[Robot\\]/Robot Test/Thread \\[main\\]" | get-property childCount -raw | gt 0 | verify-true
}


//check if it test is paused on line 13
check_if_line_is_highlighted -line 13 -script_name "Script.robot"

//resume and check line 15
exec-with-options -disableJobWaiting -command {
	get-button "Resume (F8)" | click
}
check_if_line_is_highlighted -line 15 -script_name "Script.robot"


//set new breakpoint
get-editor "Script.robot" | get-left-ruler | get-ruler-column AnnotationRulerColumn | double-click-ruler 20

