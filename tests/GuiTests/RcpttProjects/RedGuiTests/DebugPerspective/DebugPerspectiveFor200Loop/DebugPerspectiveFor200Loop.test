Entry-Name: .content

get-view "Project Explorer" | get-tree | select "For200Project/For200TestSuite.robot" | double-click

get-editor "For200TestSuite.robot" | get-left-ruler | get-ruler-column AnnotationColumn | double-click-ruler 8

get-view "Project Explorer" | get-tree | select "For200Project/For200TestSuite.robot" 
    | get-menu "Debug As/1 Robot Test" | click
    

try -times 10 -delay 300 -command{
	get-view Debug | get-tree |get-item "For200TestSuite.robot \\[Robot\\]/Robot Test/Thread \\[main\\]" | get-property childCount -raw | gt 0 | verify-true
}

   
repeat [val index]-times 10 -command{
	//next line could verify if ${i} is changing correctly, but step get-item "${i}" fails randomly
	get-view Variables | get-tree | get-item "${i}" | get-property "values['Value']" | equals [plus $index 1] | verify-true
	check-debug-marker-on-ruler -line 8 -script_name "For200TestSuite.robot"	
	
	with [get-view Debug | get-tree] {
	get-item "For200TestSuite.robot \\[Robot\\]/Robot Test/Thread \\[main\\]" | get-property childCount | equals 3
        | verify-true       
    get-item "For200TestSuite.robot \\[Robot\\]/Robot Test/Thread \\[main\\]/BuiltIn.Log \\[line:8\\]" 
        | get-property caption | equals "BuiltIn.Log [line:8]" | verify-true
    get-item "For200TestSuite.robot \\[Robot\\]/Robot Test/Thread \\[main\\]/${i} = 0 \\[line:7\\]" 
        | get-property caption | equals "${i} = 0 [line:7]" | verify-true
    get-item "For200TestSuite.robot \\[Robot\\]/Robot Test/Thread \\[main\\]/${i} IN RANGE \\[ 0 | 200 \\] \\[line:7\\]" 
        | get-property caption | equals "${i} IN RANGE [ 0 | 200 ] [line:7]" | verify-true
	}


	//step over - will go to FOR KW
	exec-with-options -disableJobWaiting -command {
			get-button "Step Over (F6)" | click
	}
	wait 200
	
	with [get-view Debug | get-tree] {
    get-item "For200TestSuite.robot \\[Robot\\]/Robot Test/Thread \\[main\\]/${i} = 1 \\[line:7\\]" 
        | get-property caption | equals "${i} = 1 [line:7]" | verify-true
    get-item "For200TestSuite.robot \\[Robot\\]/Robot Test/Thread \\[main\\]/${i} IN RANGE \\[ 0 | 200 \\] \\[line:7\\]" 
        | get-property caption | equals "${i} IN RANGE [ 0 | 200 ] [line:7]" | verify-true
    //only For name is not shown
    get-item "For200TestSuite.robot \\[Robot\\]/Robot Test/Thread \\[main\\]" | get-property childCount | equals 2 
        | verify-true
	}
	
	with [get-view Variables | get-tree] {
    get-item "${i}" | get-property "values['Value']" | equals 0 | verify-true
    check-debug-marker-on-ruler -line 7 -script_name "For200TestSuite.robot"
	}
}

get-button "Terminate (M1+F2)" | click

//check Mesage log
get-view "Message Log" | get-editbox | get-property "getLineCount()" | equals 21 | verify-true
get-view "Message Log" | get-editbox | get-property text -raw | split -sep "\n" |to-list |each [val item]  [val index]{
	$item | matches [concat $msg_log_regex_INFO  $index]
}

//check Console log
get-view Console | get-text-viewer | get-property text -raw | matches "^Command: .*\nSuite Executor: Robot Framework.*\n={78}\nFor200Project\s*\n={78}\nFor200Project.For200TestSuite[ ]*\n={78}\ntest[ ]*\[ ERROR \] Execution stopped by user."


