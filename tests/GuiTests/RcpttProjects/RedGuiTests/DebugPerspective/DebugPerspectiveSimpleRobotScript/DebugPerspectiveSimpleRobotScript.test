------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-button "Open Perspective" | click
with [get-window "Open Perspective"] {
    get-table | select Robot
    get-button OK | click
}

get-view "Project Explorer" | get-tree | select "RunRobotScriptInDebugPerspective/SimpleLoggingTestCase.robot" 
    | select "RunRobotScriptInDebugPerspective/SimpleLoggingTestCase.robot" | get-menu "Open With/Robot Text Editor" 
    | click


get-editor "Robot Text Editor" | get-text-viewer | get-property text | equals "*** Variables ***\n"
    + "${variable}\t1\n\n"
    + "*** Settings ***\n\n"
    + "*** Test Cases ***\n"
    + "firstTest\n"
    + "\tLog\t${variable}\n"
    + "\t${variable}\tSet Variable\t10\n"
    + "\tLog\t${variable}\n"
    + "\t\n"
    + "*** Keywords ***" | verify-true

with [get-view "Project Explorer" | get-tree] {
    select "RunRobotScriptInDebugPerspective/SimpleLoggingTestCase.robot" | get-menu "Debug As/1 Robot Test" | click
}
get-view Console | get-text-viewer | get-property text 
    |  matches  ".*\\n.*\\n.*\\n.*\\n.*\\n.*\\n.*\\n.*\\n.*\\n.*\\n.*\\n.*\\n.*\s\\|\sPASS\s\\|\\n.*\\n.*\\n.*\\n.*output.*\\n.*log.*\\n.*report.*"  | verify-true
    

get-view "Message Log" | get-editbox | get-property text | contains "INFO : 1\n" | verify-true
get-view "Message Log" | get-editbox | get-property text | contains "INFO : ${variable} = 10\n" | verify-true
get-view "Message Log" | get-editbox | get-property text | contains "INFO : 10" | verify-true

get-view Console | get-button "Clear Console" | click

