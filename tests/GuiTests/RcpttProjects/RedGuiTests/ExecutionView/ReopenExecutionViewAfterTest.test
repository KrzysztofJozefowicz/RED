//open view and run test
get-tab-folder -index 4 | get-tab-item "Execution View" | click
get-view "Project Explorer" | get-tree |  select "ExecutionViewProject/duplicate_test_case.robot" 
    | get-menu "Run As/1 Robot Test" | click

//check that view is not empty   
with [get-view "Execution View"] {
    get-tree | get-item "ExecutionViewProject \\(.* s\\)/Duplicate Test Case \\(.* s\\)" 
        | get-property childCount | equals 4 | verify-true
    get-label "Passed: 2" | get-property caption | equals "Passed: 2" | verify-true
    get-label "Failed: 2" | get-property caption | equals "Failed: 2" | verify-true
}

//close and open view    
get-view "Execution View" | close

get-menu "Window/Show View/Execution View" | click
//check that view is not cleared - bug
with [get-view "Execution View"] {
    get-tree | get-item "ExecutionViewProject \\(.* s\\)/Duplicate Test Case \\(.* s\\)" 
        | get-property childCount | equals 4 | verify-true
    get-label "Passed: 2" | get-property caption | equals "Passed: 2" | verify-true
    get-label "Failed: 2" | get-property caption | equals "Failed: 2" | verify-true
}
