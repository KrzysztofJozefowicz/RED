Content-Type: text/ecl
Entry-Name: .content

wait 5000
//reopen aplication and check that view is clear
get-menu "File/Restart" | click
wait-until-eclipse-is-ready
get-view Welcome | close

//open view
get-tab-folder -index 4 | get-tab-item "Execution View" | click

//procedure must be after restart because RCPTT does not see it before (hmm....)
proc "check-if-execution-view-is-empty"{
	with [get-view "Execution View"] {
	    get-tree | get-property itemCount | equals 0 | verify-true
	    get-label "Passed: 0" | get-property caption | equals "Passed: 0" | verify-true
	    get-label "Failed: 0" | get-property caption | equals "Failed: 0" | verify-true
	    get-editbox -after [get-label "Failed: 0"] | get-property text | equals "" | verify-true
	}
}


//rerun tests
get-view "Execution View" | get-button "Rerun Tests" | click
check-if-execution-view-is-empty

//run failed tests
get-view "Execution View" | get-button "Rerun Failed Tests Only" | click
check-if-execution-view-is-empty

//turn on "show failurs only" - should do nothing
with [get-view "Execution View" | get-button "Show Failures Only"] {
    click
}
check-if-execution-view-is-empty

//turn off "show failurs only" - should do nothing
with [get-view "Execution View" | get-button "Show Failures Only"] {
    click
}
check-if-execution-view-is-empty



