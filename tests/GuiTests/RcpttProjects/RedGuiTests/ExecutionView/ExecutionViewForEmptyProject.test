//run test on empty project
get-view "Project Explorer" | get-tree | select "Empty_project" | select "Empty_project" 
    | get-menu "Run As/1 Robot Test" | click

//check console    
get-view Console | get-text-viewer | get-property text 
    | equals "^Command: .*\nSuite Executor: Robot Framework .*\n\[ ERROR \] Suite 'Empty project' contains no tests in suite 'Empty_project'.\n\nTry --help for usage information."
     | verify-true
     
//check that execution view is empty
get-tab-folder -index 4 | get-tab-item "Execution View" | click
with [get-view "Execution View"] {
    get-tree | get-property itemCount | equals 0 | verify-true
    get-label "Passed: 0" | get-property caption | equals "Passed: 0" | verify-true
    get-label "Failed: 0" | get-property caption | equals "Failed: 0" | verify-true
}
//run another test
get-view "Project Explorer" | get-tree | select "ExecutionViewProject/all_pass_tests.robot" 
    | select "ExecutionViewProject/all_pass_tests.robot" | get-menu "Run As/1 Robot Test" | click

//check that view is not empty    
with [get-view "Execution View"] {
    get-tree | get-property itemCount | equals 1 | verify-true
    get-label "Passed: 3" | get-property caption | equals "Passed: 3" | verify-true
    get-label "Failed: 0" | get-property caption | equals "Failed: 0" | verify-true
}

//run empty project again
get-view "Project Explorer" | get-tree | select "Empty_project" | select "Empty_project" 
    | get-menu "Run As/1 Robot Test" | click
    
//check console    
get-view Console | get-text-viewer | get-property text 
    | equals "^Command: .*\nSuite Executor: Robot Framework .*\n\[ ERROR \] Suite 'Empty project' contains no tests in suite 'Empty_project'.\n\nTry --help for usage information."
     | verify-true
     
//check that execution view is empty - bug
get-tab-folder -index 4 | get-tab-item "Execution View" | click
with [get-view "Execution View"] {
    get-tree | get-property itemCount | equals 0 | verify-true
    get-label "Passed: 0" | get-property caption | equals "Passed: 0" | verify-true
    get-label "Failed: 0" | get-property caption | equals "Failed: 0" | verify-true
}


