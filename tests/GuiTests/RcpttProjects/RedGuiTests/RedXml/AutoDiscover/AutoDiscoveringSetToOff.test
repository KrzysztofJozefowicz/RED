    get-item new | get-property childCount | equals 2 | verify-true
    get-item new | get-property "getItems().TreeItem[0].getText()" 
        | equals "Robot Standard libraries \[Robot Framework .* \(.*\)\]" | verify-true
    get-item new | get-property "getItems().TreeItem[1].getText()" | equals "red.xml" | verify-true
    get-item RobotProject | get-property childCount | equals 11 | verify-true
    get-item RobotProject | get-property "getItems().TreeItem[0].getText()" 
        | equals "Robot Standard libraries \[Robot Framework .* \(.*\)\]" | verify-true
        
    get-item RobotProject | get-property "getItems().TreeItem[1].getText()" | equals "Robot Referenced libraries" | verify-true    
    get-item RobotProject | get-property "getItems().TreeItem[2].getText()" | equals libs | verify-true
    get-item RobotProject | get-property "getItems().TreeItem[3].getText()" | equals "other_tests" | verify-true
    get-item RobotProject | get-property "getItems().TreeItem[4].getText()" | equals resources | verify-true
    get-item RobotProject | get-property "getItems().TreeItem[5].getText()" | equals tests | verify-true
    get-item RobotProject | get-property "getItems().TreeItem[6].getText()" | equals "Tests_wit_lib" | verify-true
    get-item RobotProject | get-property "getItems().TreeItem[7].getText()" | equals "lib_with_variable.robot" 
        | verify-true
    get-item RobotProject | get-property "getItems().TreeItem[8].getText()" | equals "multiply.py" | verify-true
    get-item RobotProject | get-property "getItems().TreeItem[9].getText()" | equals "multiply.pyc" | verify-true
    get-item RobotProject | get-property "getItems().TreeItem[10].getText()" | equals "red.xml" | verify-true
