    select "RobotProject/resources" | double-click
    select "RobotProject/resources/res" | double-click
    select "RobotProject/resources/res/resource.robot" | double-click
}
with [get-editor "resource.robot" | get-text-viewer] {
    set-caret-pos 2 15
    type-text "../"
