    get-item "RobotProject/resources/res" | drag-exit
    get-item "RobotProject/resources/res" | drag-accept 12 7 -detail move
    drag-set-data
    get-item "RobotProject/resources/res" | drop 12 7 -detail move
    drag-end -detail move
