    get-item "http:\\/\\/127.0.0.1:8270\\/RPC2" | get-property "image.path" 
        | equals "org.robotframework.ide.eclipse.main.plugin/resources/remote_connected.png" | verify-true
    get-item "http:\\/\\/127.0.0.1:8270\\/RPC2" | get-property "styles[0].fontStyle" | equals normal | verify-true
    get-item text | get-property "image.path" 
        | equals "org.robotframework.ide.eclipse.main.plugin/resources/remote_connected.png" | verify-true
    get-item text | get-property "styles[0].fontStyle" | equals normal | verify-true
    get-item "onet.pl\\/" | get-property "image.path" 
        | equals "org.robotframework.ide.eclipse.main.plugin/resources/remote_connected.png" | verify-true
    get-item "onet.pl\\/" | get-property "styles[0].fontStyle" | equals normal | verify-true
}

