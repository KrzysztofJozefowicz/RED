//check if all items are (duplicate were not added):
with [get-editor "RobotProject/red.xml" | get-section "Remote library locations" | get-table] {
    get-property "getItems().TableItem[0].getText()" | equals "http://127.0.0.1:8270/" | verify-true
    get-property "getItems().TableItem[1].getText()" | equals "http://127.0.0.1:8660/" | verify-true
    get-property "getItems().TableItem[2].getText()" | equals "http://127.0.0.1:15/repo" | verify-true
    get-property "getItems().TableItem[3].getText()" | equals "http://127.0.0.1:8270/RPC2" | verify-true
    get-property "getItems().TableItem[4].getText()" | equals text | verify-true
    get-property "getItems().TableItem[5].getText()" | equals "onet.pl/" | verify-true
    get-property "getItems().TableItem[6].getText()" | equals "https://127.0.0.1:8270/" | verify-true
    get-property "getItems().TableItem[7].getText()" | equals "...add new remote location" | verify-true
    get-property "getItemCount()" | equals 8 | verify-true
}

//remove with 3 items
with [get-editor "RobotProject/red.xml" | get-section "Remote library locations" | get-table] {
    select "http:\\/\\/127.0.0.1:8270\\/" "http:\\/\\/127.0.0.1:15\\/repo" "https:\\/\\/127.0.0.1:8270\\/"
    key-type Del
}

with [get-editor "RobotProject/red.xml" | get-section "Remote library locations" | get-table] {
    select "http:\\/\\/127.0.0.1:8660\\/" | double-click
    select "http:\\/\\/127.0.0.1:8660\\/" | activate-cell-edit
    with [get-editbox] {
        set-text "http://127.0.0.1:8660/new"
        key-type Enter
    }
