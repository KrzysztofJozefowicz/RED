    get-property "getItems().TableItem[0].getText()" | equals "http://127.0.0.1:8660/new" | verify-true
    get-property "getItems().TableItem[1].getText()" | equals "http://127.0.0.1:8270/RPC2" | verify-true
    get-property "getItems().TableItem[2].getText()" | equals text | verify-true
    get-property "getItems().TableItem[3].getText()" | equals "onet.pl/" | verify-true
    get-property "getItems().TableItem[4].getText()" | equals "...add new remote location" | verify-true
}

//check imgae and font style (canot be done in verifiation due to graphic is dispose
with [get-editor "RobotProject/red.xml" | get-section "Remote library locations" | get-table] {
