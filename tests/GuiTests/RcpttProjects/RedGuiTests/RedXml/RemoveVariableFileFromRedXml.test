get-view "Project Explorer" | get-tree | select "RobotProject/red.xml" | double-click
get-editor "RobotProject/red.xml" | get-section "Variable files" | get-button "Add Variable File" | click
//add local variable file
set-dialog-result File "platform:/resource/RobotProject/lib.py"
with [get-window "Add Variable File"] {
    get-button "Browse..." | click
    get-button OK | click
}
//save and remove it
get-button "Save (M1+S)" | click
with [get-editor "RobotProject/red.xml" | get-section "Variable files"] {
    get-table | select "lib.py - RobotProject\\/lib.py"
    get-button Remove | click
}
//check i it is not in red.xml
get-editor "RobotProject/red.xml" | get-section "Variable files" | get-table | get-property itemCount | equals 0 
    | verify-true
get-tab-folder -index 1 | get-property activePage | equals "*RobotProject/red.xml" | verify-true

//save file
get-button "Save (M1+S)" | click
//check if file is not in red.xml
get-editor "RobotProject/red.xml" | get-section "Variable files" | get-table | get-property itemCount | equals 0 
    | verify-true
