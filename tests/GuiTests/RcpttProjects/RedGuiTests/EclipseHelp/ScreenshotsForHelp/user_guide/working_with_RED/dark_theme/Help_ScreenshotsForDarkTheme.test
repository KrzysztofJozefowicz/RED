global [val screenshot_base_folder[run-process-and-trim  "python" "-c"  "import os;print os.environ['WORKSPACE']" ]]
[val screenshot_local_folder [concat $sys_sep "help_scr" $sys_sep "user_guide" $sys_sep "working_with_RED" $sys_sep "dark_theme" $sys_sep ]]


proc "gui-view-screenshot" [val activePage] [val scr_path]{
  
  loop [val index [int 0]] {
    let [val folder [get-tab-folder -index $index]] {
      let [val folderActivePage [$folder | get-property activePage -raw]] {
        if [$folderActivePage | eq $activePage] {
          $folder |get-object| save-screenshot [concat $screenshot_base_folder $screenshot_local_folder $scr_path]   //returning result
        } -else { recur [$index | plus 1] }
      }
    }
  }
  
}

get-preferences-menu | click
get-window Preferences | get-tree | select "Robot Framework/Editor/Syntax Coloring"
with [get-window "Preferences" ] {
    get-object | invoke setSize 950 600 
    get-object | save-screenshot [concat $screenshot_base_folder $screenshot_local_folder "robot-color-profiles.png"]
}
get-window Preferences | get-tree | select "General/Appearance"
with [get-window "Preferences" ] {
    get-object | invoke setSize 950 600 
    get-object | save-screenshot [concat $screenshot_base_folder $screenshot_local_folder "apperence-dark.png"]
}

