global [val screenshot_base_folder[run-process-and-trim  "python" "-c"  "import os;print os.environ['WORKSPACE']" ]]
[val screenshot_local_folder [concat $sys_sep "help_scr" $sys_sep "user_guide" $sys_sep "working_with_RED" $sys_sep "custom_paths_relatve" $sys_sep ]]


proc "gui-view-screenshot" [val activePage] [val scr_path]{
  
  loop [val index [int 0]] {
    let [val folder [get-tab-folder -index $index]] {
      let [val folderActivePage [$folder | get-property activePage -raw]] {
        if [$folderActivePage | eq $activePage] {
          $folder |get-object| save-screenshot [concat $screenshot_base_folder $screenshot_local_folder $scr_path]   //returning result
        } -else { recur [$index | plus 1] }
      }
    }
  }
  
}
get-view "Project Explorer" | get-tree | select "RobotProject/red.xml" | double-click
get-editor "RobotProject/red.xml" | get-tab-folder | get-tab-item "Referenced libraries" | click
gui-view-screenshot "RobotProject/red.xml" "custom_path.png"
