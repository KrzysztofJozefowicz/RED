// open Help view in Eclipse as RCPTT cannot check F1 help as it is embeded browser 
get-menu "Window/Show View/Other..." | click
with [get-window "Show View"] {
    get-tree | select "Help/Help"
    get-button OK | click
}
get-view Help | get-link Contents | click
// check if root item RED Robot Editor User Guide exists
get-view Help | get-tree | get-item "RED - Robot Editor User Guide" | get-property caption 
    | equals "RED - Robot Editor User Guide" | verify-true

// open up First steps with RED and check if 5 children exists
get-view Help | get-tree | select "Workbench User Guide"
with [get-view Help | get-tree] {
    get-item "RED - Robot Editor User Guide/First steps with RED" | get-property "getItems().TreeItem[0].getText()" 
        | equals "Download and install" | verify-true
    get-item "RED - Robot Editor User Guide/First steps with RED" | get-property "getItems().TreeItem[1].getText()" 
        | equals "Eclipse principles" | verify-true
    get-item "RED - Robot Editor User Guide/First steps with RED" | get-property "getItems().TreeItem[2].getText()" 
        | equals "Create project, add test and run" | verify-true
    get-item "RED - Robot Editor User Guide/First steps with RED" | get-property "getItems().TreeItem[3].getText()" 
        | equals Debug | verify-true
    get-item "RED - Robot Editor User Guide/First steps with RED" | get-property "getItems().TreeItem[4].getText()" 
        | equals "Preferences and red.xml" | verify-true
    get-item "RED - Robot Editor User Guide/First steps with RED" | get-property "getText()" 
        | equals "First steps with RED" | verify-true
}
// check if RED Overview and Legal items are present
with [get-view Help | get-tree] {
    get-item "RED - Robot Editor User Guide/RED Overview" | get-property caption | equals "RED Overview" | verify-true
    get-item "RED - Robot Editor User Guide/Legal" | get-property caption | equals Legal | verify-true
}

//close Help
get-view Help | close
