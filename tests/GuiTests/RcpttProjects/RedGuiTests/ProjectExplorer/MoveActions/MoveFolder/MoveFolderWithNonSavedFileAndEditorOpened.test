//create folder

get-view "Project Explorer" | get-tree | select RobotProject | get-menu "New/Robot Test Suites folder" | click
with [get-window "New Robot Test Suites folder"] {
    get-editbox -after [get-label "Folder name:"] | set-text NewFolder
    get-button Finish | click
}

//create file
get-view "Project Explorer" | get-tree | select "RobotProject/NewFolder" | get-menu "New/Robot Test Suite" | click
with [get-window "New Robot Test Suite"] {
    get-editbox -after [get-label "File name:"] | set-text "newFile.robot"
    get-button Finish | click
}
//edit file
with [get-editor "newFile.robot"] {
    get-tab-folder | get-tab-item Variables | click
    get-link "Section is not yet defined, do you want to create it?" | click
    
    CreateVariablesInTableEditor "newFile.robot"
}
with [get-editor "newFile.robot" | get-table] {
    select "${var}"
    get-cell 0 1 | mouse up -count 1
}
with [get-editor "newFile.robot" | get-table] {
    get-cell 0 1 | mouse down -count 2
    double-click
    select "${var}" | activate-cell-edit -column 1
    with [get-editbox] {
        set-text test
        key-type "NUMPAD_ENTER" "\\u000D"
    }
    apply-cell-edit -deactivate
}
//move folder
with [get-view "Project Explorer" | get-tree] {
    select "RobotProject/NewFolder"
    get-item "RobotProject/NewFolder" | drag-start 19 9
    get-item "RobotProject/NewFolder/newFile.robot" | drag-enter 4 0 -detail move
    get-item "RobotProject/NewFolder/newFile.robot" | drag-over 6 16
    get-item "RobotProject/TestSuiteFolder" | drag-over 26 7 -detail move
    get-item "RobotProject/NewFolder/newFile.robot" | drag-exit
    get-item "RobotProject/TestSuiteFolder" | drag-accept 26 7 -detail move
    drag-set-data
    get-item "RobotProject/TestSuiteFolder" | drop 26 7 -detail move
    drag-end -detail move
}
//Save file
get-window "Save Resource" | get-button Yes | click
// Open moved file
get-view "Project Explorer" | get-tree | select "RobotProject/TestSuiteFolder/NewFolder/newFile.robot" | double-click
get-editor "newFile.robot" -index 1 | get-tab-folder | get-tab-item Variables | click
// 2 editors for one file are opened, old one dirty, moved one clean
with [get-tab-folder -index 1] {
    get-property "pages[0]" | equals "*newFile.robot" | verify-true
    get-property "pages[1]" | equals "newFile.robot" | verify-true
}

//check if file is moved
with [get-view "Project Explorer" | get-tree] {
    get-property "selection[0].path[0]" | equals RobotProject | verify-true
    get-property "selection[0].path[1]" | equals TestSuiteFolder | verify-true
    get-property "selection[0].path[2]" | equals NewFolder | verify-true
    get-property "selection[0].path[3]" | equals "newFile.robot" | verify-true
}
