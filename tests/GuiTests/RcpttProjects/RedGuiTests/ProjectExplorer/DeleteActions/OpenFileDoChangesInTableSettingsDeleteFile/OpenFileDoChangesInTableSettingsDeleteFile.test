//open file and do the change
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Settings | click
    get-link "Section is not yet defined, do you want to create it?" | click
    get-section Metadata | get-table | select "...add new metadata"
}
//delete file
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | get-menu Delete | click
get-window "Delete Resources" | get-button OK | click
//save file
wait 500
get-window "Save Resource" | get-property title | equals "Save Resource" | verify-true
get-window "Save Resource" | get-button Yes | click

// editor is still opened, file is dirty
get-tab-folder -index 1 | get-property activePage | equals "*TestFile.robot" | verify-true

get-view "Project Explorer" | get-tree | get-item RobotProject | get-property "getItemCount()" | equals 2 | verify-true


