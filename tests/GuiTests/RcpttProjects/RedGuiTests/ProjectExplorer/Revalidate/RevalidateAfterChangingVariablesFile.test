Entry-Name: .content

get-menu "Project/Clean..." | click
get-window Clean | get-button OK | click

//check that is no problems
get-view Problems | get-tree | get-property itemCount | equals 0 | verify-true

//change in pytohn file variable name
get-view "Project Explorer" | get-tree | select "RobotProject/get_variables.py" 
    | select "RobotProject/get_variables.py" | get-menu "Open With/Text Editor" | click
with [get-editor "get_variables.py" | get-text-viewer] {
    set-caret-pos 2 24
    key-type BackSpace -times 5
    type-text red
    key-type "M1+s"
}

//change in pytohn file variable name
get-view "Project Explorer" | get-tree | select "RobotProject/simple_var.py" | select "RobotProject/simple_var.py" 
    | get-menu "Open With/Text Editor" | click
with [get-editor "simple_var.py" | get-text-viewer] {
    set-caret-pos 1 6
    key-type BackSpace -times 5
    type-text yellow
    key-type "M1+s"
}

//revalidate - nothin is happening - first must be Reset
with [get-view "Project Explorer" | get-tree] {
    select "RobotProject/TestFile.robot" | double-click
    select "RobotProject/TestFile.robot" | get-menu "Robot Framework/Revalidate" | click
}

//check that errors are not shown
get-view Problems | get-tree | get-property itemCount | equals 0 | verify-true

//reset
get-view "Project Explorer" | get-tree | select RobotProject | get-menu "Robot Framework/Reset Robot Environment" 
    | click
    
//check that errors are not shown    
get-view Problems | get-tree | get-property itemCount | equals 0 | verify-true

//validate file
get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | get-menu "Robot Framework/Revalidate" 
    | click

wait 1000    
//check that now are errors    
with [get-view Problems | get-tree] {
    get-item "Errors \\(2 items\\)" | get-property "getItems().TreeItem[0].getText()" 
        | equals "Variable 'black' is used, but not defined" | verify-true
    get-item "Errors \\(2 items\\)" | get-property "getItems().TreeItem[1].getText()" 
        | equals "Variable 'white' is used, but not defined" | verify-true
}
